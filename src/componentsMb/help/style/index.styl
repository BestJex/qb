@import "../../../common/css/variable.styl"

.help-wrap-mb
  font-family PingFangSC-Medium
  .route
    padding 0.2rem 0.12rem
  h3
    font-size 0.14rem
    letter-spacing 0.0129rem
    line-height 0.20rem
    text-align left
    color $h5-color-green
  .title
    margin-bottom 0.3rem
    font-size 0.16rem
    color $h5-color-green
    letter-spacing 0.0157rem
    text-align center
    font-weight bold
  .help-download
    text-align center
    h2
      font-size 0.24rem
      color $h5-color-normal
      margin 0.12rem 0 0.16rem 0
      text-align center
    p
      height 0.14rem
      color $h5-color-normal
      line-height 0.14rem
      text-align center
    .content
      padding 0 0.28rem
      text-align center
      img
        width 2.4rem
      a
        position relative
        top -0.28rem
        display block
        height 0.48rem
        line-height 0.48rem
        padding-left 0.35rem
        margin-bottom 0.22rem
        font-size 0.18rem
        color $normal-black-color
        text-align center
        border-radius(0.04rem)
        &.iphone
          background $h5-help-download-iphone no-repeat 0.9rem center $main-color
          background-size 0.26rem auto
          &:active
            background-color $h5-color-green
        &.android
          background $h5-help-download-android no-repeat 0.9rem center $main-color
          background-size 0.26rem auto
          &:active
            background-color $h5-color-green
    .qrcode
      position relative
      top -0.08rem
      margin-bottom 0.24rem
      canvas
        border 0.05rem solid $normal-white-color
        width 1.2rem !important
        height 1.2rem !important
    span
      font-size 0.14rem
      color $line-light
  //服务协议
  .help-terms
    color $h5-color-normal
    &.nohead
      margin-top -0.5rem
      .title
        display none
    p,li
      margin-bottom 0.1rem
      font-size 0.12rem
      letter-spacing 0.01rem
      text-align justify
      line-height 0.24rem
    h3
      margin 0.2rem 0 0.15rem 0
      font-weight bold
    ol
      li
        padding 0.05rem 0
        margin 0
  //api文档
  .help-api
    color $h5-color-normal
    span
      font-size 0.12rem
      padding 0 0.05rem
      font-family NotoSansHans-Regular
      display inline-block
      height 0.2rem
      line-height 0.2rem
      color $h5-color-light
      background $h5-foreground-weight
      border-radius(0.04rem)
    h3
      margin 0.2rem 0
      font-weight bold
    .content
        font-size 0.12rem
        letter-spacing 0.01rem
        text-align left
        ol
          li
            margin  0.1rem 0
            line-height 0.24rem
        pre
          display block
          padding 0.05rem 0.1rem
          margin 0.1rem 0
          font-size 0.12rem
          line-height .24rem
          word-break break-all
          word-wrap break-word
          background-color $h5-foreground-weight
          border-radius(0.02rem)
          code
            font-family NotoSansHans-Regular
            white-space normal
    .summarize
        p
          text-indent 0.15rem
          line-height 0.24rem
    .api-list
      margin-top 0.2rem
      table
        text-align left
        td,th
          padding 0.1rem
          line-height 0.2rem
          border 0.01rem solid $h5-foreground
        th
          background-color $h5-foreground-weight
          text-align center
          vertical-align middle
      ol
        li:nth-child(3)
          text-indent 1em
      h5
        margin 0.3rem 0 0.2rem 0
        span
          height .3rem
          line-height .3rem
          font-size .14rem
          padding 0 .1rem
  //费率标准
  .help-pricing
    color $h5-color-normal
    margin-top -0.2rem
    .title
      text-align left
      margin 0.2rem 0
    table
      width 100%
      margin 0.2rem 0
      th
        color $h5-color-light
      td,th
        vertical-align middle
        padding 0.1rem
        font-size 0.12rem
        border 0.01rem solid $h5-foreground
        text-align center
      thead
        background-color $h5-foreground-weight
    ul
      margin-bottom 0.2rem
      li
        font-size 0.12rem
        margin 0.05rem 0
        letter-spacing 0.0006rem
        line-height 0.24rem
        text-align justify
    .score-grow
      table
        th,td
          text-align left
          line-height .2rem
          word-break break-all
        th
          text-align center
  // 币种资料
  .help-coin
    color $h5-color-normal
    .title
      margin-bottom 0.2rem
      font-size 0.14rem
      text-align left
    .search
      height 0.4rem
      display flex
      .input
        flex-grow 1
        margin-right .1rem
        .search2
          &::after
            width 0.4rem
          input
            font-size 0.12rem
            padding 0 0.4rem 0 0.1rem
            height 100%
            width 100%
          .search-list
            position relative
            width 100%
            background $h5-foreground
            border 0.01rem solid $h5-foreground
            z-index 99
            li
              height 0.35rem
              padding-left 0.2rem
              font-size 0.13rem
              line-height 0.35rem
              &:hover
                background $h5-foreground
      button
        width 0.46rem
        font-size 0.26rem
        color $h5-color-normal
        background-color $h5-foreground
        &.active
          background-color $h5-color-green
        &:nth-child(2)
          border-radius(0.02rem 0 0 0.02rem)
        &:nth-child(3)
          border-radius(0 0.02rem 0.02rem 0)
    .content
      position relative
      margin-top .4rem
      img
        position absolute
        top 0
        left 0
        width 0.66rem
        height 0.66rem
        border 1px solid $h5-border-weight
        border-radius 50%
      .left
        margin-left 1rem
        p:nth-child(1)
          font-size 0.16rem
          margin-bottom 0.1rem
        p:nth-child(2)
          font-size 0.2rem
          margin-bottom 0.1rem
        a:nth-child(3)
          font-size 0.14rem
          color $h5-color-green
          text-decoration underline
      .right
        font-size 0.14rem
        margin-top .2rem
        border-bottom .01rem solid $h5-foreground
        span
          display block
          line-height .4rem
          text-align right
          border-top .01rem solid $h5-foreground
          b
            color $h5-color-light
            display inline-block
            float left
      .detail
        h3
          font-size .15 rem
          color $h5-color-light
          line-height .4rem
        p
          line-height .24rem
          color $h5-color-normal
          text-align justify