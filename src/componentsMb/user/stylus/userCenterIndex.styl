// @import "./variable.styl"
.user-center-index
  height calc(100vh - 50px)
  .user-center-header
    background-color $h5-user-bg-active
    div
      padding .25rem 0
      display flex
      flex-direction column
      align-items center
      img
        width .5rem
        height .5rem
        border-radius 50%
      span
        margin-top .1rem
        font-size .2rem
        color $h5-user-font-content
  .user-center-main
    margin-top .12rem
    padding 0 .12rem
    .list-section
      padding 0 .12rem
      margin-bottom .16rem
      background-color $h5-user-bg-active
      .list-item
        height .45rem
        line-height .45rem
        border-bottom .01rem solid $h5-user-line
        display block
        clear both
        .fl
          img
            height .19rem
            vertical-align middle
            margin-right .13rem
          span
            font-size .15rem
            color $h5-user-font-content
            vertical-align middle
        .fr
          img
            height .16rem
            vertical-align middle
            margin-left .04rem
          span
            font-size .12rem
            color $h5-user-font-title
      .list-item:last-child
        border-bottom 0