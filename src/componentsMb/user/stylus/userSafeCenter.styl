.user-safe-center
  width: 100%
  height: 100vh
  background-color: #f6f8fa
  .safe-center-header
    position relative
    width 100%
    padding .12rem .12rem
    background-color: #009af6
    .back
      img 
        height .16rem
        margin-right .05rem
        vertical-align middle
      span 
        font-size .14rem
        line-height .2rem
        color #FFFFFF
        vertical-align middle
    .name
      position absolute
      top 50%
      left 50%
      margin-top -0.1rem
      margin-left -0.36rem
      font-size .18rem
      line-height .20rem
      color #FFFFFF
  .safe-center-container
    padding: 0 12px
    font-size: 15px
    line-height: 21px
    background-color: #ffffff
    .item
      padding: 11px 0
      border-bottom: 2px solid #D8DAE1
      .fr span 
        font-size: 14px
        color: #97A9C1
      .fr img 
        height: 16px
        vertical-align: middle
        margin-left: 5px
    .item:last-child
      border-bottom: 0
  .need-fund-pass
    position: fixed
    bottom: 0
    left: 0
    width: 100%
    height: 100vh
    background-color: rgba(0, 0, 0, 0.6)
    .select-section
      width: 100%
      position: fixed
      bottom: 0
      left: 0
      background-color: #f6f8fa
      button 
        width: 100%
        font-size: 18px
        line-height: 25px
        padding: 10px
        border-bottom: 2px solid #D8DAE1
        background-color: #ffffff
      button:nth-child(3)
        border-bottom: 0
        margin-bottom: 12px
      button:nth-child(4)
        border-bottom: 0
      

      