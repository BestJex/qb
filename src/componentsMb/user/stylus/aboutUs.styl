@import "../../../common/css/variable.styl"
.about-us
  display flex
  flex-direction column
  img
    width 100%
  .invite-btn
    height .45rem
    line-height .45rem
    text-align center
    background $h5-color-green
    color $h5-color-weight
    font-size .18rem
    margin .4rem .12rem
    border-radius .02rem
    &:hover,&:active,&:focus
      opacity .6