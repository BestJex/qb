@import "../../../common/css/variable.styl"

@keyframes bgscale {
  0% {
    transform: scale(1.05);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(1.05);
  }
}

.home-wrap-mb
  .home-updown
    position relative
    padding-left .15rem
    &.up-i
      color $index-blue
      &:before
        position absolute
        top 50%
        transform translate(0, -50%)
        left 0
        content ''
        width .12rem
        height .12rem
        background url('/static/img/shangzhang.svg') no-repeat center center
        background-size .12rem .12rem
    &.down-i
      color $index-red
      &:before
        position absolute
        top 50%
        transform translate(0, -50%)
        left 0
        content ''
        width .12rem
        height .12rem
        background url('/static/img/xiadie.svg') no-repeat center center
        background-size .12rem .12rem
  .hide
    display none
  //推荐交易对
  .home-recommend
    width 100%
    background $normal-white-color
    ul
      width 100%
      padding .13rem
      white-space nowrap
      li
        display inline-block
        margin 0.06rem
        padding 0.1rem
        background $normal-white-color
        min-width 1.48rem
        box-shadow 2px 2px 10px #ddd
        .p1
          span
            color $normal-black-color
            font-size .16rem
          img
            float right
            height 0.16rem
        .p2
          margin-top 0.1rem
          b
            margin-right .05rem
            font-size .15rem
            color $exchange-blue;
          i
            line-height 0.15rem
            font-size 0.12rem
            color $exchange-blue;
            float right

  //市场
  .home-market
    background $normal-white-color
    padding 0 0.1rem
    .market-nav
      height .36rem
      line-height .36rem
      margin-bottom .08rem
      ul
        height .36rem
        white-space nowrap
        li
          position relative
          display inline-block
          cursor pointer
          padding 0 0.08rem
          span
            font-size .12rem
            padding .08rem
            &.home-market-item-active
              color $normal-white-color
              background $index-blue
              border-radius .2rem
              box-shadow: 0 .07rem .3rem rgba(65, 139, 255, .4)
          &:first-child
            padding-left 0
          &:last-child
            padding-right 0
            &:after
              position absolute
              top 0
              right 0
              content ''
              background none
          &:after
            position absolute
            top 0
            right -0.03rem
            content '|'
            color $normal-gray-color
    table
      width 100%
      thead
        tr
          color $normal-gray-color
      tr
        height .45rem
        line-height .45rem
      tbody




