@import "../../../common/css/variable.styl"

.home-wrap-mb
  font-family PingFangSC-Medium
  .home-updown
    position relative
    padding-left .15rem
    &.up-i
      color $index-blue
      &:before
        position absolute
        top 50%
        transform translate(0, -50%)
        left 0
        content ''
        width .12rem
        height .12rem
        background url('/static/img/shangzhang.svg') no-repeat center center
        background-size .12rem .12rem
    &.down-i
      color $index-red
      &:before
        position absolute
        top 50%
        transform translate(0, -50%)
        left 0
        content ''
        width .12rem
        height .12rem
        background url('/static/img/xiadie.svg') no-repeat center center
        background-size .12rem .12rem
  .hide
    display none
  //推荐交易对
  .home-recommend
    width 100%
    background $normal-white-color
    .noscroll
      overflow hidden
      height .9rem;
    .ul-wrap
      overflow auto
      width 100%
      position relative
      padding .15rem 0 .3rem 0
      height 1.05rem
      ul
        position absolute
        white-space nowrap
        height 0.6rem
        left 0
        li
          display inline-block
          padding 0.1rem
          margin 0 0.03rem
          height 100%
          background $normal-white-color
          min-width 1.48rem
          box-shadow 2px 2px 10px #ddd
          .p1
            span
              color $normal-black-color
              font-size .16rem
            img
              float right
              height 0.16rem
          .p2
            margin-top 0.1rem
            b
              margin-right .05rem
              font-size .15rem
              color $exchange-blue;
            i
              line-height 0.15rem
              font-size 0.12rem
              color $exchange-blue;
              float right
        li:first-child
          margin-left 0.1rem
        li:last-child
          margin-right 0.1rem
  //市场
  .home-market
    background $normal-white-color
    padding 0 0.15rem
    .market-nav
      height .36rem
      line-height .36rem
      margin-bottom .14rem
      text-align center
      ul
        white-space nowrap
        margin-bottom 0.2em
        li
          position relative
          display inline-block
          cursor pointer
          padding 0 0.08rem
          span
            font-size .12rem
            padding .08rem
            &.home-market-item-active
              color $normal-white-color
              background $index-blue
              border-radius .2rem
              box-shadow: 0 .07rem .3rem rgba(65, 139, 255, .4)
          &:first-child
            padding-left 0
          &:last-child
            padding-right 0
            &:after
              position absolute
              top 0
              right 0
              content ''
              background none
          &:after
            position absolute
            top 0
            right -0.03rem
            content '|'
            color $normal-gray-color
    table
      width 100%
      thead
        tr
          height .3rem
          line-height .3rem
          color $normal-gray-color
      tbody
        tr
          line-height 0.24rem
          height 0.62rem
          td
            vertical-align middle
            img
              height .14rem
              vertical-align -.02rem
              margin-right .04rem
            span
              font-size 0.12rem
              color $normal-gray-color
            h3
              font-size 0.14rem
              color $normal-black-color
              small
                font-size 0.12rem
                color $normal-gray-color
            b
              font-size 0.14rem
              color $exchange-blue
              display block
              &.up
                color $exchange-blue
              &.down
                color $exchange-red
            a
              font-size 0.15rem
              color $normal-white-color
              background $exchange-red
              padding 0.05rem
              border-radius 1px
      th:last-child, td:last-child
        text-align right









