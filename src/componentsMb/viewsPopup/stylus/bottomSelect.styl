@import "./variable.styl"
.need-fund-pass
    position fixed
    bottom 0
    left 0
    width 100%
    height 100vh
    background-color rgba(0, 0, 0, 0.6)
    z-index 9999
    .select-section
      width 100%
      position fixed
      bottom 0
      left 0
      background-color $h5-vp-bg
      a
        display block
        font-size .15rem
        line-height .45rem
        border-bottom .01rem solid $h5-vp-line
        color $h5-vp-font-normal
        text-align center
        span
          position relative
          font-size 0.15rem
          i
            position absolute
            left 100%
            bottom 0
            font-size 0.14rem
            line-height 0.16rem
            color $h5-vp-font-light
            white-space: nowrap
      a:last-child
        border-top .08rem solid $h5-vp-line
        border-bottom 0
