@import "../../../common/css/variable.styl"
@import "../../../common/css/base.styl"

.asset-mb
  .balance
    font-family PingFangSC-Medium
    .total-asset
      background $h5-foreground
      padding .25rem .15rem
      .total
        label
          display block
          line-height .2rem
          font-size .15rem
          opacity 0.8
          color $h5-color-light
          margin-bottom .04rem
        b
          line-height .4rem
          font-size .24rem
          color $h5-color-normal
      .total-cny
        span
          font-size .14rem
          margin-top .08rem
          color $h5-color-light
          display block
    .menu-ul
      line-height .45rem
      border 1px solid $h5-border-weight
      border-left none
      border-right none
      background $h5-foreground
      height .45rem
      li
        display inline-block
        width 33%
        text-align center
        position relative
        overflow hidden
        .assets-record
          font-size .12rem
        &:not(:last-of-type)::after
          position absolute
          right 0
          content ""
          width .01rem
          background $h5-border-weight
          height .25rem
          top .1rem
        a
          color $h5-color-normal
          white-space nowrap
          img
            height .2rem
            margin-right .08rem
            vertical-align -.05rem


    .asset-wallet
      padding-bottom .4rem
      .filter
        line-height .45rem
        height .45rem
        background $h5-foreground
        padding 0 .2rem
        span
          color $h5-color-normal
          font-size .15rem
        img
          height .2rem
          width .2rem
          margin-right .1rem
          vertical-align -.05rem
        .toggle-btn
          display inline-block
          width .48rem
          height .24rem
          float right
          margin-top .1rem
          border-radius  .24rem
          background $h5-foreground-weight
          position relative
          border .02rem solid $h5-foreground-weight
          i
            display inline-block
            height .2rem
            width .2rem
            background $h5-color-weight
            border-radius 50%
            position absolute
            top 0
          &.active
            background $h5-color-green
            border-color $h5-color-green
            i
              right 0
      .wallet-li
        background $h5-foreground
        padding .08rem .12rem
        margin .12rem
        border-radius .02rem
        .d1
          padding-bottom .08rem
          border-bottom 1px solid $h5-border-weight
          line-height .2rem
          label
            font-size .14rem
            color $h5-color-weight
            img
              height .2rem
              width .2rem
              margin-right .06rem
              vertical-align -.05rem
          a
            float right
            color $h5-color-normal
            font-size .12rem
        .d2
          padding .08rem 0 .05rem 0
          p
            display inline-block
            vertical-align top
            width 50%
            span
              color $h5-color-light
              font-size .12rem
              display block
              line-height .16rem
              margin-bottom .08rem
            i
              font-size .14rem
              color $h5-color-normal




