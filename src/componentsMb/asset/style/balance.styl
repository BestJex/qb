.asset-mb
  .balance
    font-family PingFangSC-Medium
    .total-asset
      background $h5-asset-bg
      padding .2rem .12rem .12rem .12rem
      .dv1
        line-height .2rem
        display flex
        align-items center
        label
          font-size .15rem
          color $h5-asset-font-light
          opacity .8
        img
          height .2rem
          width auto
          margin-left .12rem
      .dv2
        height .33rem
        margin-top .08rem
        display flex
        align-items center
        overflow hidden
        white-space nowrap
        b
          font-size .24rem
          color $h5-asset-font-normal
        i
          font-size .14rem
          color $h5-asset-font-light
          margin-left .12rem
      .dv3
        padding .12rem .12rem 0 .12rem
        margin-top .17rem
        border-top .01rem solid $h5-asset-border
        position relative
        p
          line-height .21rem
          font-size .15rem
          label
            color $h5-asset-font-light
            min-width 1.02rem
            display inline-block
          i
            margin-left .07rem
            color $h5-asset-font-normal
          &.p2
            margin-top .08rem
        a
          float right
          font-size .15rem
          display inline-block
          line-height .2rem
          position absolute
          right .12rem
          top .27rem
          color $h5-asset-font-normal

    .menu-ul
      line-height .45rem
      border-top 1px solid $h5-asset-border
      background $h5-asset-bg
      height .47rem
      li
        display inline-block
        width 50%
        position relative
        overflow hidden
        padding-left .12rem
        &:not(:last-of-type)::after
          position absolute
          right 0
          content ""
          width .01rem
          background $h5-asset-border
          height .25rem
          top .1rem
        a
          color $h5-asset-font-normal
          white-space nowrap
          img
            height .2rem
            margin-right .08rem
            vertical-align -.05rem


    .asset-wallet
      margin-top .08rem
      .filter
        line-height .44rem
        height .44rem
        background $h5-asset-bg
        padding 0 .12rem
        a.f1
          img
            width auto
            height .2rem
            margin-right .1rem
            vertical-align -.05rem
          i
            color $h5-asset-font-active
            font-size .15rem
        a.f2
          float right
          display flex
          align-items center
          i
            font-size .14rem
            color $h5-asset-font-light
          img
            margin-left .08rem
            width .08rem
            height auto

      .wallet-li
        margin 0 .12rem
        line-height .44rem
        height .44rem
        border-bottom .01rem solid $h5-asset-bg
       label
         font-size .15rem
         color $h5-asset-font-normal
         i
           font-size .12rem
           color $h5-asset-font-light
           margin-left .08rem
       span
         float right
         font-size .15rem
         color $h5-asset-font-normal
