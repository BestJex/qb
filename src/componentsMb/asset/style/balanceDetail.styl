.asset-mb
  .balance-detail
    font-family PingFangSC-Medium
    .detail
      padding 0 .12rem
      .d1
        padding .18rem 0
        img
          width .44rem
          height .44rem
          border-radius 50%
          float left
          margin-top .05rem
        b
          display block
          margin-left .55rem
          font-size .24rem
          line-height .37rem
          color $h5-asset-font-normal
        span
          display block
          margin-left .55rem
          font-size .12rem
          line-height .17rem
          color $h5-asset-font-light
      .d2
        border-bottom .01rem solid $h5-asset-bg
        padding-bottom .12rem
        p
          display inline-block
          vertical-align top
          width 50%
          span
            display block
            font-size .12rem
            color $h5-asset-font-light
            line-height .17rem
          i
            font-size .14rem
            color $h5-asset-font-normal
            line-height .2rem
            margin-top .04rem
            display block
      .d3
        padding .12rem 0 .2rem 0
        p
          line-height .3rem
          span
            font-size .14rem
            color $h5-asset-font-light
          i
            font-size .14rem
            color $h5-asset-font-normal
            float right


    .coin-info
      display block
      position fixed
      bottom .4rem
      line-height .4rem
      width 100%
      padding 0 .12rem
      background $h5-asset-bg
      color $h5-asset-font-active
      font-size .15rem
      img
        float right
        height .16rem
        margin-top .12rem

    .footer
      box-shadow 0 -.04rem .2rem 0 rgba(0,0,0,0.20)
      background $h5-asset-bg
      position fixed
      bottom 0
      width 100%
      height .4rem
      color $h5-asset-font-active
      button
        width 50%
        text-align center
        display inline-block
        font-size .18rem
        line-height .4rem
        background transparent
        &.active
          background $h5-asset-font-active
          color $h5-asset-font-weight

    .coin-data
      padding .12rem
      .title
        margin-bottom 0.2rem
        font-size 0.14rem
        text-align left
      .search
        height 0.4rem
        display flex
        .input
          flex-grow 1
          margin-right .1rem
          .search2
            &::after
              width 0.4rem
            input
              font-size 0.12rem
              padding 0 0.4rem 0 0.1rem
              height 100%
              width 100%
            .search-list
              position relative
              width 100%
              background $h5-help-bg
              border 0.01rem solid $h5-help-bg
              z-index 99
              li
                height 0.35rem
                padding-left 0.2rem
                font-size 0.13rem
                line-height 0.35rem
                &:hover
                  background $h5-help-bg
        button
          width 0.46rem
          font-size 0.26rem
          color $h5-help-font-content
          background-color $h5-help-bg
          &.active
            background-color $h5-help-theme-main
          &:nth-child(2)
            border-radius(0.02rem 0 0 0.02rem)
          &:nth-child(3)
            border-radius(0 0.02rem 0.02rem 0)
      .content
        position relative
        margin-top .4rem
        img
          position absolute
          top 0
          left 0
          width 0.66rem
          height 0.66rem
          border 1px solid $col2120
          border-radius 50%
        .left
          margin-left 1rem
          p:nth-child(1)
            font-size 0.16rem
            margin-bottom 0.1rem
          p:nth-child(2)
            font-size 0.2rem
            margin-bottom 0.1rem
          a:nth-child(3)
            font-size 0.14rem
            color $h5-help-theme-main
            text-decoration underline
        .right
          font-size 0.14rem
          margin-top .2rem
          border-bottom .01rem solid $h5-help-bg
          span
            display block
            line-height .4rem
            text-align right
            border-top .01rem solid $h5-help-bg
            b
              color $h5-help-font-title
              display inline-block
              float left
        .detail
          h3
            font-size .15 rem
            color $h5-help-font-title
            line-height .4rem
          p
            line-height .24rem
            color $h5-help-font-content
            text-align justify

