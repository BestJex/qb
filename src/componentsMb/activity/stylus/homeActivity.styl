@import "../../../common/css/variable.styl"

.banner-wrap-mb
  width 100%
  height 1.6rem
  position relative
  overflow hidden
  .banner-img
    position absolute
    top 0
    width 100%
    height 1.6rem
    animation: bgscale 10s ease-in-out infinite
  img
    position absolute
    top .5rem
    left 50%
    margin-left -1.5rem
    height .6rem
    width 3rem
    filter contrast(80%)
    z-index 100

@keyframes bgscale {
  0% {
    transform: scale(1.05);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(1.05);
  }
}