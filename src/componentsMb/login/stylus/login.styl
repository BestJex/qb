@import "../../../common/css/variable.styl"

.login-wrap-mb
  width 100%
  padding .2rem
  .hide
    display none
  .userAgree
    color $main-color
  h1
    text-align center
    font-size .24rem
    margin-bottom .3rem
  .tab-ul
    line-height .4rem
    margin-bottom .15rem
    span
      display inline-block
      line-height .35rem
      padding 0 .2rem
      color $main-color
      font-size .13rem
      border-radius 2px
      cursor pointer
      &.active
        color #FFF
        background $main-color
  ul
    margin-bottom .25rem
    li
      width 100%
      height .4rem
      margin-bottom .2rem
      input
        width 100%
        height .4rem
        border 1px solid $line-light
        font-size .12rem
        &::placeholder
          font-size .12rem !important
      .login-btn
        width 100%
        height .4rem
        background $main-color
        color $normal-white-color
        opacity .5
        border-radius .04rem
      .can-click
        opacity 1
    .send-code-li, .verify-li
      display flex
      .base-input-wrap
        flex-grow 1
        input
          border-right none
          vertical-align top
          border-radius (.02rem 0 0 .02rem)
      .send-code-btn, .picture-btn
        background $main-color
        color $normal-white-color
        border-radius (0 .02rem .02rem 0)
        overflow hidden
      .picture-btn
        width 1rem
        img
          width 100%
          height 100%
      .send-code-btn
        width 1rem
        font-size .12rem
    .pass-li
      position relative
      .base-input-wrap
        input
          padding-right .9rem
      span
        position absolute
        top 50%
        right .1rem
        transform translateY(-50%)
        cursor pointer
        line-height .2rem
        a
         color $main-color
         font-size .12rem
        &:before
          position absolute
          top 0
          left -.1rem
          width .01rem
          height .2rem
          content ''
          background-color #999
  .agree
    display block
    margin-top -.1rem
    font-size .12rem
    color $normal-gray-color
    input
      width .12rem
      height .12rem
      margin-right .05rem
      vertical-align -.02rem
    a
      font-size .12rem
      margin 0 .02rem





