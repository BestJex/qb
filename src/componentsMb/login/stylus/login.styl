@import "./variable.styl"

.login-wrap-mb
  width 100%
  padding 0 .16rem
  margin-top .36rem
  font-family PingFangSC-Medium
  .hide
    display none !important
  .userAgree
    color $h5-login-theme-main
  h1
    font-size .24rem
    margin-bottom .36rem
    color $h5-login-theme-main
  .tab-ul
    width 2.6rem
    height 0
    position fixed
    bottom 0
    left 50%
    margin-left -1.3rem
    border-left .36rem solid transparent
    border-right .36rem solid transparent
    border-bottom .36rem solid $h5-login-line
    span
      color $h5-login-font-content
      font-size .14rem
      line-height .36rem
      text-align center
      display none
      &.show
        display block
  ul
    margin-bottom .25rem
    li
      width 100%
      height .45rem
      margin-bottom .2rem
      input
        width 100%
        height .45rem
      em
        color $h5-login-font-warn
        font-size .12rem
    .send-code-li, .verify-li
      display flex
      .base-input-wrap
        flex-grow 1
        input
          border-right none
          border-radius (.02rem 0 0 .02rem)
      .send-code-btn
        background $h5-login-bg
        color $h5-login-font-btn
        border-radius (0 .02rem .02rem 0)
        border 0
        &:hover
          color $h5-login-font-btn
          opacity 1
      .disabled-btn
        color $h5-login-font-title
        &:hover
          color $h5-login-font-title
          opacity .8
      .picture-btn
        width 1rem
        border-radius (0 .02rem .02rem 0)
        border 0
        background $h5-login-img-bg
        img
          width 100%
          height 100%
      .send-code-btn
        width 1rem
        height .45rem
        font-size .12rem
    .pass-li
      position relative
      .base-input-wrap
        input
          padding-right .9rem
    .login-li
      margin-top .36rem
      .login-btn
        width 100%
        height .4rem
        opacity 0.6
      .can-click
        opacity 1
  .agree
    display block
    margin-top -.15rem
    color $h5-login-font-title
    text-align justify
    img
      position relative
      top .02rem
      float left
      width .12rem
      height .12rem
      margin-right .08rem
    p
      width 2.75rem
      float left
      line-height .17rem
      span
        font-size .12rem
        color $h5-login-font-content
      a
        font-size .12rem
        margin 0 .02rem

  .forget-pass-p
    margin-top -0.15rem
    a
      font-size .12rem
      color $h5-login-font-remind





