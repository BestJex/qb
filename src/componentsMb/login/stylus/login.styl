@import "./variable.styl"

.login-wrap-mb
  width 100%
  padding 0 .16rem
  margin-top .36rem
  font-family PingFangSC-Medium
  .hide
    display none !important
  .userAgree
    color $h5-login-green
  h1
    font-size .24rem
    margin-bottom .36rem
    color $h5-login-green
  .tab-ul
    width 2.6rem
    height 0
    position absolute
    bottom 0
    left 50%
    margin-left -1.3rem
    border-left .36rem solid transparent
    border-right .36rem solid transparent
    border-bottom .36rem solid $h5-login-line
    span
      color $h5-login-font-normal
      font-size .14rem
      line-height .36rem
      text-align center
      display none
      &.show
        display block
  ul
    margin-bottom .25rem
    li
      width 100%
      height .45rem
      margin-bottom .2rem
      input
        width 100%
        height .45rem
    .send-code-li, .verify-li
      display flex
      .base-input-wrap
        flex-grow 1
        input
          border-right none
          border-radius (.02rem 0 0 .02rem)
      .send-code-btn
        background $h5-login-foreground
        color $h5-login-font-light
        border-radius (0 .02rem .02rem 0)
        border 0
      .picture-btn
        width 1rem
        border-radius (0 .02rem .02rem 0)
        border 0
        background $h5-login-foreground
        img
          width 100%
          height 100%
      .send-code-btn
        width 1rem
        font-size .12rem
    .pass-li
      position relative
      .base-input-wrap
        input
          padding-right .9rem
      span
        position absolute
        top 50%
        right .1rem
        transform translateY(-50%)
        line-height .2rem
        a
         color $h5-login-font-light
         font-size .12rem
        &:before
          position absolute
          top 0
          left -.1rem
          width .01rem
          height .2rem
          content ''
          background-color $h5-login-font-light
    .login-li
      margin-top .36rem
      .login-btn
        width 100%
        height .4rem
        opacity 0.6
      .can-click
        opacity 1
  .agree
    display block
    margin-top -.15rem
    font-size .12rem
    color $h5-login-font-light
    img
      width .12rem
      height .12rem
      margin-right .05rem
      vertical-align -.02rem
    a
      font-size .12rem
      margin 0 .02rem





