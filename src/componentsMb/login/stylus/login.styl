@import "../../../common/css/variable.styl"

.login-wrap-mb
  width 100%
  padding .2rem
  font-family PingFangSC-Medium
  .hide
    display none
  .userAgree
    color $h5-color-blue
  h1
    text-align center
    font-size .24rem
    margin-bottom .3rem
  .tab-ul
    line-height .4rem
    margin .8rem 0 .3rem 0
    text-align center
    span
      display inline-block
      line-height .4rem
      padding 0 .2rem
      color $normal-black-color
      font-size .16rem
      border-bottom .02rem solid transparent
      margin 0 .1rem
      max-width: 1.1rem;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      &.active
        color $h5-color-blue
        border-color $h5-color-blue
  ul
    margin-bottom .25rem
    li
      width 100%
      height .4rem
      margin-bottom .2rem
      input
        width 100%
        height .4rem
      .login-btn
        width 100%
        height .4rem
        background $h5-color-blue
        color $normal-white-color
        opacity .5
        border-radius .04rem
        border 0
      .can-click
        opacity 1
    .send-code-li, .verify-li
      display flex
      .base-input-wrap
        flex-grow 1
        &:hover+.picture-btn, &:active+.picture-btn, &:focus+.picture-btn
          border 1px solid $h5-color-blue
          border-left none
        input
          border-right none
          vertical-align top
          border-radius (.02rem 0 0 .02rem)
      .send-code-btn
        background $h5-color-blue
        color $normal-white-color
        border-radius (0 .02rem .02rem 0)
        overflow hidden
        border 0
      .picture-btn
        width 1rem
        border-radius (0 .02rem .02rem 0)
        border 1px solid $h5-border-light
        border-left none
        background $h5-border-light
        overflow hidden
        img
          width 100%
          height 100%
      .send-code-btn
        width 1rem
        font-size .12rem
    .pass-li
      position relative
      .base-input-wrap
        input
          padding-right .9rem
      span
        position absolute
        top 50%
        right .1rem
        transform translateY(-50%)
        cursor pointer
        line-height .2rem
        a
         color $h5-color-blue
         font-size .12rem
        &:before
          position absolute
          top 0
          left -.1rem
          width .01rem
          height .2rem
          content ''
          background-color #999
  .agree
    display block
    margin-top -.1rem
    font-size .12rem
    color $h5-color-light
    input
      width .12rem
      height .12rem
      margin-right .05rem
      vertical-align -.02rem
    a
      font-size .12rem
      margin 0 .02rem





