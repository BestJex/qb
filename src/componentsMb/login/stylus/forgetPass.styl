@import "./variable.styl"

.find-pass-wrap-mb
  padding .2rem
  font-family PingFangSC-Medium
  h1
    font-size .24rem
    margin-bottom .36rem
    color $h5-login-theme-main
  ul
    width 100%
    li
      position relative
      margin-bottom .24rem
      em
        font-size .12rem
        color $h5-login-theme-active
        display block
        margin-top .06rem
      p
        color $h5-login-font-title
        margin-bottom .08rem
        font-size .14rem
        line-height .2rem
      .normal-remind
        margin-top .12rem
        color $h5-login-font-content
      .err-remind
        margin-top .12rem
      input
        width 100%
        height .45rem
    .send-verify-li, .send-picture-li
      .clearfix
        display flex
        height .45rem
        .base-input-wrap
          flex-grow 1
          input
            border-right none
            border-radius (.02rem 0 0 .02rem)
        .send-code-btn
          width 1rem
          height .45rem
          background $h5-login-bg
          border 0
          border-radius (0 .02rem .02rem 0)
          color $h5-login-font-btn
          &:hover
            color $h5-login-font-btn
            opacity 1
        .disabled-btn
          color $h5-login-font-title
          &:hover
            color $h5-login-font-title
            opacity .8
        .picture-btn
          width 1rem
          border-radius (0 .02rem .02rem 0)
          border 0
          background $h5-login-img-bg

    .submit-li
      margin-top .36rem
      .pass-btn
        width 100%
        height .4rem
        opacity 0.6
      .can-click
        opacity 1


