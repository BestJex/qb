@import "../../../common/css/variable.styl"

.find-pass-wrap-mb
  padding .2rem
  h1
    text-align center
    font-size .24rem
    margin-bottom .3rem
  ul
    width 100%
    li
      position relative
      margin-bottom .2rem
      em
        position absolute
        top 0
        right 0
        font-size .12rem
        color $negative-color
      p
        color $dark-font-color
        margin-bottom .08rem
        font-size .14rem
        line-height .2rem
      input
        width 100%
        height .4rem
      .pass-btn
        width 100%
        height .4rem
        background $main-color
        color $normal-white-color
        opacity .5
        border-radius .04rem
      .can-click
        opacity 1
    .send-verify-li, .send-picture-li
      .clearfix
        display flex
        .base-input-wrap
          flex-grow 1
          input
            border-right none
            border-radius (.02rem 0 0 .02rem)
        .send-code-btn
          width 1rem
          background $main-color
          border none
          border-radius (0 .02rem .02rem 0)
          color $normal-white-color
    .pass-li
      .base-input-wrap
        margin-bottom .1rem
      span
        font-size .12rem
        color $negative-color-active
    .send-picture-li
      img
        width 1rem
        height.4rem
        background $line-light
