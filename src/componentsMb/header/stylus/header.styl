@import "../../../common/css/variable.styl"

.header-nav-mb
  font-family PingFangSC-Medium
  height .5rem
  padding 0 .2rem 0 0.1rem
  box-shadow: 0 1px 4px 0 rgba(151,168,178,0.3)
  background $normal-white-color
  display flex
  justify-content space-between
  .logo
    display inline-block
    height 100%
    padding .15rem 0
    >img
      height .2rem
  .nav-right
    //float right
    line-height .5rem
    a
      margin 0 .1rem
    .login
      color $index-gray
  .nav-hidden
    position: fixed
    z-index: 100001
    top 0
    bottom 0
    right 0
    left 37.5%;
    overflow auto
    background $main-color
    .nav-login
      height .7rem
      line-height .7rem
    a
      width 100%
      height .5rem
      line-height .5rem
      display block;
      padding-left .3rem
      color $normal-white-color
      border-bottom 1px solid $normal-white-color
      img
        margin-right .12rem
        width .44rem
        height .44rem
        border-radius 50%
        vertical-align middle

  .nav-shadow
    position: fixed;
    z-index: 100000;
    background-color: rgba(0,0,0,.3);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;

