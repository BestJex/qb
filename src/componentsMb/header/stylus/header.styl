@import "../../../common/css/variable.styl"

.route-mb
  padding-top .5rem
  background-color $h5-background
  min-height 6.4rem
.header-nav-mb
  position fixed
  width 100%
  top 0
  z-index 9999999
  font-family PingFangSC-Medium
  height .5rem
  padding 0 .2rem 0 0.1rem
  background $normal-white-color
  box-shadow 0 0.02rem .02rem $h5-shadow-light
  display flex
  .logo
    display inline-block
    height 100%
    padding .15rem 0
    >img
      height .2rem
  .nav-menu
    flex-grow 1
    display flex
    justify-content flex-end
    align-items center
    >a
      color $h5-color-blue
      margin-left .15rem
    >img
      height .3rem
      margin-left .15rem
    .drop-menu
      position relative
      img
        height .14rem
        margin-right .05rem
        vertical-align -.02rem
      ul
        position absolute
        right 0
        margin-top .1rem
        background $normal-white-color
        box-shadow 0 0 0.05rem $h5-shadow-weight
        border-radius .02rem
        overflow hidden
        li
          line-height .3rem
          padding 0 .1rem
          white-space nowrap
          color $h5-color-normal
          font-size .13rem
  .nav-hidden
    position: fixed
    z-index: 100001
    top 0
    bottom 0
    right 0
    left 37.5%;
    overflow auto
    background $h5-main-color
    box-shadow 0.02rem 0 .05rem $h5-shadow-light
    .nav-login
      height .7rem
      line-height .7rem
    a
      width 100%
      height .5rem
      line-height .5rem
      display block;
      padding-left .3rem
      color $normal-white-color
      border-bottom 1px solid $h5-color-light
      img
        margin-right .12rem
        width .44rem
        height .44rem
        border-radius 50%
        vertical-align middle

  .nav-shadow
    position: fixed;
    z-index: 100000;
    background-color: rgba(0,0,0,.5);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;

