@import "./variable"

// h5 全局样式
.route-mb
  padding-top .5rem
  background-color $h5-route-bg
  min-height calc(100vh);
  input
    background $h5-input-bg
    color $h5-input-color
    font-size .14rem
    border .01rem solid transparent
    &:hover, &:focus, &:active
      border-color $h5-input-hover !important
    &::placeholder
      color $h5-input-placeholder
      font-size .12rem
  a.default.main, button.default.main
    border none
    background  $h5-button-bg
    color $h5-button-color
    border-radius .02rem
    opacity 1
    &:hover, &:focus, &:active
      opacity 0.6
      color $h5-button-color
    &.disable
      opacity 0.6
      color $h5-button-color

// h5 头部样式
.header-nav-mb
  position fixed
  width 100%
  top 0
  z-index 9999999
  font-family PingFangSC-Medium
  height .5rem
  padding 0 .12rem 0 0.12rem
  background $h5-header-bg
  display flex
  border-bottom .01rem solid $h5-header-border
  &.hide
    display none
  .logo
    display inline-block
    height 100%
    padding .15rem 0
    >img
      height .2rem
  .nav-menu
    flex-grow 1
    display flex
    justify-content flex-end
    align-items center
    >a
      color $h5-header-font-weight
      margin-left .15rem
    >img
      height .18rem
      margin-left .15rem
    .drop-menu
      position relative
      img
        height .14rem
        margin-right .05rem
        vertical-align -.02rem
      ul
        position absolute
        right 0
        margin-top .1rem
        background $h5-header-bg
        box-shadow 0 0 0.1rem $h5-header-border
        border-radius .02rem
        overflow hidden
        li
          line-height .3rem
          padding 0 .1rem
          white-space nowrap
          color $h5-header-font-normal
          font-size .13rem
  .nav-hidden
    position: fixed
    z-index: 100001
    top .5rem
    bottom 0
    right 0
    left 37.5%;
    overflow auto
    background $h5-header-bg
    box-shadow 0.02rem 0 .1rem $h5-header-border
    a
      width 100%
      height .45rem
      line-height .45rem
      display block;
      padding-left .2rem
      color $h5-header-font-normal
      img
        margin-right .15rem
        width .24rem
        height .24rem
        vertical-align middle
    .user
      height .7rem
      line-height .7rem
      border-bottom .01rem solid $h5-header-border
      img
        width .44rem
        height .44rem
    .logout
      border-top .01rem solid $h5-header-font-weight
      position absolute
      bottom 0
      width 100%

.nav-shadow
    position: fixed;
    z-index: 100000;
    background-color: rgba(0,0,0,.2);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;



