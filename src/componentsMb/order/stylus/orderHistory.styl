// @import "./base.styl"
.order-history
  position relative
  width: 100%
  height: 100%
  .order-history-filter
    position: fixed
    top: .45rem
    left 0
    z-index: 200
    width: 100%
    height: calc(100% - .44rem)
    background-color $h5-order-bg-popup
    .filter-container
      padding .12rem .12rem 0 .12rem
      background-color $h5-order-bg-active
      border-bottom .02rem solid $h5-order-bg
      h1
        font-size .14rem
        line-height .2rem
        color $h5-order-font-content
      .choose-button
        padding .06rem .1rem
        border-radius .02rem
        margin-right .1rem
        margin-bottom .08rem
        font-size .15rem
        line-height .2rem
        color $h5-order-font-title
        background-color $h5-order-bg
      .chosen
        position relative
        color $h5-order-font-select
        color $h5-order-font-select
      .chosen:after
        position absolute
        bottom 0
        right 0
        content ''
        display block
        width .28rem
        height .23rem
        background: $order-filter-select center center no-repeat
        background-size contain
      .choose-section
        margin: .08rem 0 .04rem 0
      .select
        width 8.8em
        margin-bottom .08rem
    .filter-operate
      padding .08rem 0
      background-color $h5-order-bg-active
      button
        width 50%
        font-size .18rem
        line-height .25rem
        color $h5-order-font-select
      button:first-child
        box-sizing border-box
        border-right .02rem solid $h5-order-bg
  .order-history-list
    width 100%
    height 100%
    min-height calc(100vh - 0.45rem)
    padding .56rem .12rem 1px .12rem
    margin-bottom -1px
    background-color #0E100E
    overflow-y scroll