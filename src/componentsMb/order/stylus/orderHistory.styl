@import "../../../common/css/variable.styl"
.order-history
  position relative
  width: 100%
  height: 100%
  .order-history-header
    position absolute
    top 0;
    left 0;
    width 100%
    padding .12rem
    color $normal-white-color
    background-color $h5-color-blue
    img
      height .2rem
      padding .02rem
      vertical-align middle
    .back
      cursor pointer
      span
        margin-left .03rem
        font-size .14rem
        line-height .2rem
        vertical-align middle
    .name
      position absolute
      top 50%
      left 50%
      transform: translate(-50%, -50%)
      font-size .18rem
      line-height .20rem
    .history
      cursor pointer
      margin-left: .24rem
    .filter
      cursor pointer
  .order-history-filter
    position: absolute
    top: .44rem
    left 0
    width: 100%
    height: calc(100% - .44rem)
    background-color $popup-bg-color
    .filter-container
      padding .12rem .12rem 0 .12rem
      background-color $normal-white-color
      border-bottom .01rem solid $h5-filter-button
      h1
        font-size .14rem
        line-height .2rem
      .choose-button
        padding .06rem .24rem
        border-radius .02rem
        margin-right .12rem
        font-size .15rem
        line-height .2rem
        color $h5-orderlist-th
        background-color $h5-order-filter-button
      .chosen
        position relative
        background-color $h5-order-filter-button-chosen
        color $h5-color-blue
      .chosen:after
        position absolute
        bottom 0
        right 0
        content ''
        display block
        width .28rem
        height .23rem
        background: $h5-order-filter-select center center no-repeat
        background-size contain
      .choose-section
        padding .08rem 0 .12rem 0
      .select
        width 10.8em
    .filter-operate
      padding .08rem 0
      background-color $normal-white-color
      button
        width 50%
        font-size .18rem
        line-height .25rem
        color $h5-color-blue
      button:first-child
        box-sizing border-box
        border-right .01rem solid $h5-filter-button
  .order-history-list
    width 100%
    height 100%
    padding .56rem .12rem 1px .12rem
    margin-bottom -1px
    background-color $h5-shadow-light
    overflow-y scroll