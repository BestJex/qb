@import "../../../common/css/variable.styl"
.order-current
  position relative
  width: 100%
  height: 100%
  .order-current-header
    position absolute
    top 0;
    left 0;
    width 100%
    padding .12rem
    color $h5-color-normal
    background-color $h5-foreground
    img
      height .2rem
      padding .02rem
      vertical-align middle
    .back
      cursor pointer
      span
        margin-left .03rem
        font-size .14rem
        line-height .2rem
        vertical-align middle
    .name
      position absolute
      top 50%
      left 50%
      transform: translate(-50%, -50%)
      font-size .18rem
      line-height .20rem
    .history
      cursor pointer
      margin-left: .24rem
    .filter
      cursor pointer
  .order-current-hide
    width 100%
    position absolute
    top .44rem
    left 0
    padding .06rem .12rem
    border-bottom .02rem solid $h5-order-filter-button
    .toggle-btn
      display inline-block
      width .48rem
      height .24rem
      border-radius  .24rem
      background $bg-dark-color
      position relative
      border .02rem solid $bg-dark-color
      i
        display inline-block
        height .2rem
        width .2rem
        background $normal-white-color
        border-radius 50%
        position absolute
        top 0
      &.active
        background $main-color
        border-color $main-color
        i
          right 0
    .hide-pair
      margin-left: .08rem
      font-size .14rem
      line-height .24rem
      color $h5-orderlist-th
  .order-current-filter
    position: absolute
    top: .44rem
    left 0
    width: 100%
    height: calc(100% - .44rem)
    background-color $popup-bg-color
    .filter-container
      padding .12rem .12rem 0 .12rem
      background-color $h5-background
      border-bottom .02rem solid $h5-foreground
      h1
        font-size .14rem
        line-height .2rem
        color $h5-color-normal
      .choose-button
        padding .06rem .24rem
        border-radius .02rem
        margin-right .12rem
        font-size .15rem
        line-height .2rem
        color $h5-color-light
        background-color $h5-foreground
      .chosen
        position relative
        color $h5-color-green
      .chosen:after
        position absolute
        bottom 0
        right 0
        content ''
        display block
        width .28rem
        height .23rem
        background: $h5-order-filter-select center center no-repeat
        background-size contain
      .choose-section
        padding .08rem 0 .12rem 0
      .select
        width 10.8em
    .filter-operate
      padding .08rem 0
      background-color $h5-background
      button
        width 50%
        font-size .18rem
        line-height .25rem
        color $h5-color-green
      button:first-child
        box-sizing border-box
        border-right .02rem solid $h5-foreground
  .order-current-list
    width 100%
    height 100%
    padding .56rem .12rem 1px .12rem
    margin-bottom -1px
    background-color $h5-order-background
    overflow-y scroll