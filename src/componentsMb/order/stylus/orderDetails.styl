// @import "./base.styl"
.order-details
  width 100%
  position relative
  .order-details-header
    position absolute
    top 0
    left 0
    width 100%
    padding .12rem .12rem
    background-color $order-bg
    .back
      img 
        height .16rem
        margin-right .05rem
        vertical-align middle
      span 
        font-size .14rem
        line-height .2rem
        color $order-font-normal
        vertical-align middle
    .name
      position absolute
      top 50%
      left 50%
      margin-top -0.1rem
      margin-left -0.36rem
      font-size .18rem
      line-height .20rem
      color $order-font-normal
  .order-details-info
    padding .72rem .12rem 0
    h1 
      margin-bottom .12rem
      font-size .2rem
      line-height .28rem
      text-align center
      color $order-font-normal
    h2 
      margin-bottom .25rem
      font-size .18rem
      line-height .25rem
      text-align center
    .info-item
      margin-bottom .12rem
      span
        vertical-align bottom
      .fl
        font-size .14rem
        line-height .2rem
        color $order-font-gray
      .fl:nth-child(1)
        margin-right .05rem
        text-align justify
      .fr
        color $order-font-normal
    .deal
      color $order-font-green
    .partdeal
      color $order-font-orange
    .end
      color $order-font-gray
  .order-deal-info
    padding .12rem
    border-top .02rem solid $order-bg
    h3 
      margin-bottom .06rem
      font-size .15rem
      line-height .21rem
      color $order-font-normal
    table 
      width 100%
      .set-width
        width 1.23rem
      th 
        font-size .12rem
        line-height .29rem
        text-align left
        color $order-font-gray
      td 
        font-size .15rem
        line-height .33rem
        color $order-font-normal
