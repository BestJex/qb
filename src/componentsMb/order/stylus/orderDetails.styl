.order-details
  width 100%
  .order-details-header
    position fixed
    top 0
    left 0
    width 100%
    padding .12rem .12rem
    border-bottom .02rem solid #D8DAE1
    .back
      img 
        height .16rem
        margin-right .05rem
        vertical-align middle
      span 
        font-size .14rem
        line-height .2rem
        color #069AF7
        vertical-align middle
    .name
      position absolute
      top 50%
      left 50%
      margin-top -0.1rem
      margin-left -0.36rem
      font-size .18rem
      line-height .20rem
      color #24262C
  .order-details-info
    padding .72rem .12rem 0
    h1 
      margin-bottom .12rem
      font-size .2rem
      line-height .28rem
      text-align center
      color #24262C
    h2 
      margin-bottom .25rem
      font-size .18rem
      line-height .25rem
      text-align center
    .info-item
      margin-bottom .12rem
      span
        vertical-align bottom
      .fl
        font-size .14rem
        line-height .2rem
        color #6B7E9C
      .fl:nth-child(1)
        width .56rem
        margin-right .05rem
        text-align justify
    .deal
      color #069af7
    .partdeal
      color #f8b900
    .end
      color #98a9c0
  .order-deal-info
    padding .12rem
    border-top .02rem solid #D8DAE1
    h3 
      margin-bottom .06rem
      font-size .15rem
      line-height .21rem
    table 
      width 3.51rem
      .set-width
        width 1.23rem
      th 
        font-size .12rem
        line-height .29rem
        text-align left
        color #6B7E9C
      td 
        font-size .15rem
        line-height .33rem
