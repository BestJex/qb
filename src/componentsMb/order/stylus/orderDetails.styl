// @import "./base.styl"
.order-details
  width 100%
  position relative
  .order-details-info
    padding .24rem .12rem 0
    h1 
      margin-bottom .12rem
      font-size .2rem
      line-height .28rem
      text-align center
      color $h5-order-font-content
    h2 
      margin-bottom .25rem
      font-size .18rem
      line-height .25rem
      text-align center
    .info-item
      margin-bottom .12rem
      span
        vertical-align bottom
      .fl
        font-size .14rem
        line-height .2rem
        color $h5-order-font-title
      .fl:nth-child(1)
        margin-right .05rem
        text-align justify
      .fr
        color $h5-order-font-content
    .deal
      color $h5-order-font-deal
    .partdeal
      color $h5-order-font-partdeal
    .end
      color $h5-order-font-title
  .order-deal-info
    padding .12rem
    border-top .02rem solid $h5-order-bg
    h3 
      margin-bottom .06rem
      font-size .15rem
      line-height .21rem
      color $h5-order-font-content
    table 
      width 100%
      .set-width
        width 1.23rem
      th 
        font-size .12rem
        line-height .29rem
        text-align left
        color $h5-order-font-title
      td 
        font-size .15rem
        line-height .33rem
        color $h5-order-font-content
