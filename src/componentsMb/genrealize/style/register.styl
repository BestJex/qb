@import "./variable"
.mregister{
  text-align: center;
  font-family: PingFangSC-Regular;
}
.mregister .banner{
  box-sizing: border-box;
  height: 2.07rem;
  padding: .5rem 0;
  background: $h5-gen-bg;
  background-size: 100% auto;
  box-shadow: 0 .02rem .05rem 0 rgba(0,0,0,0.30);
  border-radius .02rem
  margin .2rem .12rem
}
.mregister .banner .balance{

}
.mregister .banner .balance b{
   display: block;
   font-size: 0.2rem;
   opacity: 0.8;
   color: $h5-gen-font-weight;
   letter-spacing: .02rem;
   line-height: .26rem;
   margin-bottom: 0.26rem;
 }

.mregister .banner .balance span{
  font-size: 0.3rem;
  color $h5-gen-font-fail
  display: inline-block;
  background-image: linear-gradient(0deg, rgba(92,98,101,0.50) 0%, #2F3335 64%);
  line-height: .5rem;
  border-radius: .04rem;
  padding: 0 .4rem;
  letter-spacing: .02rem;
}
.mregister .content{
  padding-top: 0.35rem;
}
.mregister .content .title{
  font-size: 0.25rem;
  color: $h5-gen-font-active;
}
.mregister .content p{
  font-size: 14px;
  color: $h5-gen-font-weight;
  text-align: center;
  line-height: 24px;
  padding: .18rem .45rem;
  opacity: 0.8;
}
.mregister .content .form{
  margin-top: .08rem;
  padding: 0 .12rem;
}
.mregister .content .form input{
  width: 100%;
  display: block;
  height: 0.45rem;
  border-radius: 0.02rem;
  padding: .13rem .16rem;
}
.mregister .content .form input:focus{
  border-color:$h5-gen-font-active
}
.mregister .content .form input::placeholder { /* WebKit, Blink, Edge */
  color: $h5-gen-font-light;
  font-size: .15rem;
}
.mregister .content input:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
  color: $h5-gen-font-light;
  font-size: .15rem;
}
.mregister .content input::-moz-placeholder { /* Mozilla Firefox 19+ */
  color: $h5-gen-font-light;
  font-size: .15rem;
}
.mregister .content input:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color: $h5-gen-font-light;
  font-size: .15rem;
}
.mregister .content .form button{
  display: block;
  width: 100%;
  height: 0.45rem;
  line-height: 0.45rem;
  color: $h5-gen-font-weight;
  font-size: 0.18rem;
  border-radius: 0.02rem;
  background: $h5-gen-font-active;
  margin-top: .12rem;
}

.mregister .vagueBgView{
  display: none;
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.76);
  z-index: 100;
}
.mregister .successAlert{
  display: none;
  box-sizing:border-box;
  position: fixed;
  top: 50%;
  left: 50%;
  padding-top:0.32rem;
  width: 3rem;
  height: 2.92rem;
  margin-left: -1.5rem;
  margin-top: -1.46rem;
  background-color: $h5-gen-bg;
  border-radius: 0.02rem;
  z-index: 101;
}
.mregister .successAlert img{
  widht: .6rem;
  height: .6rem;
}
.mregister .successAlert p{
  font-size: 20px;
  color: $h5-gen-font-active;
  line-height: 26px;
  padding: .08rem 0 .2rem 0;
  text-align center
}
.mregister .successAlert .mregister-asset{
  font-size: 14px;
  color: $h5-gen-font-weight;
  text-align: center;
  line-height: 26px;
  border-top: 0.01rem solid rgba(216,216,216,0.1);
  padding: .2rem 0;
}
.mregister .successAlert .mregister-asset span{
  font-size: .15rem;
  color: $h5-gen-font-fail;
  margin: 0 .08rem;
  font-weight bold
}
.mregister .successAlert .download{
  padding: 0 .16rem;
}
.mregister .successAlert .download a{
  display: block;
  height: 0.45rem;
  line-height: 0.45rem;
  text-decoration: none;
  color: $h5-gen-font-weight;
  font-size: 0.12rem;
  border-radius: 0.02rem;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
}

.mregister .failureAlert{
  display: none;
  box-sizing:border-box;
  position: fixed;
  top: 50%;
  left: 50%;
  width: 3rem;
  min-height: 2.14rem;
  margin-left: -1.5rem;
  margin-top: -1.07rem;
  background-color: $h5-gen-bg;
  border-radius: 0.02rem;
  padding-bottom: .2rem;
  z-index: 101;
}
.mregister .failureAlert p{
  height: 0.64rem;
  margin-bottom: 0.08rem;
  font-size: 0.2rem;
  color: $h5-gen-font-active;
  line-height: 0.64rem;
  border-bottom: 0.01rem solid rgba(216,216,216,0.1);
}
.mregister .failureAlert .tip{
  padding: 0 0.2rem;
  margin-bottom: 0.18rem;
  line-height: 0.28rem;
  font-size: 0.14rem;
  text-align: center;
  color: $h5-gen-font-weight;
}
.mregister .failureAlert button{
  width: 2.68rem;
  height: 0.45rem;
  line-height: 0.45rem;
  text-decoration: none;
  margin: 0 auto;
  color: $h5-gen-font-weight;
  font-size: 0.16rem;
  border-radius: 0.02rem;
  background: $h5-gen-font-active;
}