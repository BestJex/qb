@import "../../../common/css/variable.styl"
.minvite{
  padding: 0.2rem 0.12rem 0.12rem 0.12rem;
  background $h5-foreground
}
/* 文案部分 */
.minvite h3{
  font-size: 0.16rem;
  color: $h5-color-green
  line-height: 0.16rem;
  margin-bottom: 0.16rem;
}
.minvite dl dd p{
  font-size: 13px;
  color: $h5-color-light;
  line-height: 13px;
  margin-bottom: 0.16rem;
}
.minvite dl dt, .minvite dl dd h4, .minvite .welfare, .minvite .welfare span{
  font-weight bold
  font-size: 15px;
  color: $normal-font-color;
  line-height: 15px;
  margin-bottom: 0.12rem;
}
.minvite .welfare{
  font-weight: bold;
  margin-bottom: 0.16rem;
}
.minvite .welfare i{
  margin: 0 0.07rem;
  color: $h5-color-green;
  font-weight bold
}
/* 海报部分 */
.minvite .poster{
  text-align: center;
  margin 0 -.12rem
  border-top .08rem solid $h5-background
}
.minvite .poster .up{
  position relative
  padding-top: 0.24rem;
  background: $invite-bg1 no-repeat 0 0;
  background-size: 100% 100%;
}
.minvite .poster .up img{
  width 100%
  height auto
}
