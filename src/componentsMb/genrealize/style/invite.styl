.minvite .poster .up .qrcode{
  position absolute
  left 50%
  top 27%
  height: 1.36rem;
}
.minvite .poster .up .qrcode .qrcode-wrap{
  position: absolute;
  left: 50%;
  margin-left: -0.75rem;
  width: 1.4rem;
  height: 1.4rem;
  // border: 0.04rem solid $normal-white-color;
  border-radius: 0.1rem
}
.minvite .poster .up .qrcode .qrcode-wrap canvas {
  display block
  position absolute
  left 5%
  top 5%
  width 100% !important
  height 100% !important
  border 0.05rem solid $normal-font-color
}
