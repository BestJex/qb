@import "../../../common/css/variable.styl"

.tradeNav, .headerNav, .homeNav
  width 14.4rem
  height 50px
  padding 0 28px
  background $exchange-color
  line-height 50px
  position fixed
  top 0
  z-index 999
  .hide
    display none
  .login-out
    cursor pointer
  >ul
    float left
    >li
      float left
    li
      height .5rem
      margin-right .4rem
      a
        color $normal-white-color-a
        font-size 14px
        &:hover
          color $normal-white-color
      &.header-nav-active
        >a
          color $normal-white-color
      &:last-child
        margin-right 0
      &.nav-logo
        margin-right 1.2rem
        a
          display block
          width 101px
          height 50px
          background $logo-trade no-repeat 0 15px / 101px 20px
      &.select-list
        position relative
        &:hover
          .select-router
            display block
          &:after
            position absolute
            top: 50%
            right -10px
            content: ''
            width 8px
            height 5px
            background-image $icon-select
            background-size cover
            transform translateY(-50%) rotate(180deg)

        &:after
          position absolute
          top: 50%
          right -10px
          content: ''
          width 8px
          height 5px
          background-image $icon-select
          background-size cover
          transform translateY(-50%)

        .select-router
          position absolute
          display none
          left -18px
          width 100px
          background $exchange-color
          border 1px solid $exchange-bg
          li
            width 100%
            height 40px
            line-height 40px
            text-align center
            margin-right 0
            &:nth-of-type(1)
              border-bottom 1px solid $exchange-bg
            a
              display block
              width 100%
              height 100%
              padding 0
              &.children-active
                background $main-color
                color $normal-white-color
                &:hover
                  background $main-color
                  color $normal-white-color
              &:hover
                color $main-color
  >ol
    float right
    >li
      float left
      color $normal-white-color-a
      &.language-li
        width 80px
        &:hover
          color $normal-white-color
          .language-ul
            display block
          p:after
            position absolute
            top 50%
            right -10px
            content ''
            width 8px
            height 5px
            background-image $icon-select
            background-size cover
            transform translateY(-50%) rotate(180deg)
        p
          position relative
          cursor pointer
          text-align center
          &:after
            position absolute
            top 50%
            right -10px
            content ''
            width 8px
            height 5px
            background-image $icon-select
            background-size cover
            transform translateY(-50%)
          span
            font-size 14px
        ul
          display none
          background $exchange-color
          box-shadow  0 0 .10rem 0 rgba(0,0,0,0.5)
          li
            cursor pointer
            height 40px
            padding 0 5px
            line-height 40px
            text-align center
            corsor pointer

            &:hover
              color $main-color
            span
              font-size 14px
        img
          display none
      &.new-li
        position relative
        .new-li-img
          position relative
          text-align center
          cursor pointer
          img
            position relative
            top -1px
            width 16px
            height 16px
            vertical-align middle
            opacity .5
            &:hover
              opacity 1
          i
            position relative
            right 8px
            top 8px
            display inline-block
            min-width 15px
            height 15px
            padding 2px
            background $negative-color
            color $normal-white-color
            border-radius 50%
            line-height 12px
            font-size 12px
            &.hide
              display none
        .new-li-content
          position absolute
          left 50%
          transform translateX(-50%)
          width 330px
          border-radius (2px)
          background $exchange-color
          border 1px solid $normal-black-color
          box-shadow  0 0 10px 0 rgba(0,0,0,0.3)
          //&:after
          //  position absolute
          //  top -.06rem
          //  left 50%
          //  width .1rem
          //  height .1rem
          //  margin-left -.05rem
          //  border-top 1px solid $normal-black-color
          //  border-right 1px solid $normal-black-color
          //  background $exchange-color
          //  transform rotate(-45deg)
          //  -webkit-transform rotate(-45deg)
          //  content ''
          p
            height 40px
            line-height 40px
            padding 0 10px
            color $normal-font-color
            background $normal-black-color
            span
              float left
            em
              float right
              &:hover
                cursor pointer
                color $main-color
          ul
            max-height 150px
            padding 10px
            overflow-y auto
            li
              height 30px
              line-height 30px
              cursor pointer
              span
                display inline-block
                float left
                width 120px
                max-width 120px
                overflow hidden
                white-space nowrap
                text-overflow ellipsis
              b
                float right
          div
            padding 30px 0
            text-align center
            color $normal-font-color
          .check-all
            display block
            height 36px
            line-height 36px
            text-align center
            color $normal-font-color
            background $normal-black-color
            &:hover
              color $main-color

      &.login-li
        margin 0 30px 0 35px
        a
          color $normal-white-color-a
          &:hover
            color $normal-white-color
      &.user-li
        position relative
        margin 0 30px 0 35px
        p
          position relative
          cursor pointer
          text-align center
          font-size 14px
          &:hover
            color $normal-white-color
          &:after
            position absolute
            top 50%
            right -10px
            content ''
            width 8px
            height 5px
            background-image $icon-select
            background-size cover
            transform translateY(-50%)
        ul
          position absolute
          left 50%
          transform translateX(-50%)
          display none
          width 120px
          background $exchange-color
          li
            height 40px
            padding 0 5px
            line-height 40px
            text-align center
            color $normal-white-color-a
            border-bottom 1px solid $exchange-bg
            &:hover
              color $main-color
              a
                color $main-color
            a
              font-size 14px
              color $normal-white-color-a
            //&:nth-of-type(1)
            //  border-bottom 1px solid $exchange-bg
        &:hover
          .login-ul
            display block
          p:after
            position absolute
            top 50%
            right -10px
            content ''
            width 8px
            height 5px
            background-image $icon-select
            background-size cover
            transform translateY(-50%) rotate(180deg)


.headerNav, .homeNav
  width 100%
  min-width 1160px
  height 70px
  padding 0 120px
  line-height 70px
  background $main-bg-active
  >ul
    height 70px
    li
      height 70px
      margin-right 40px
      &.header-nav-active
        >a
          //border-bottom 2px solid $index-blue
          color $index-blue
          padding 6px 2px
      &:last-child
        margin-right 0
      &.nav-logo
        margin-right 120px
        a
          display block
          width 121px
          height 50px
          margin-top 10px
          background $logo-index no-repeat 0 12.5px / 121px 24px

  >ol
    >li
      &.language-li
        width 100px
        p
          text-align center
        ul
          display none
          li
            height 40px
            padding 0 5px
        img
          position relative
          top -2px
          display inline-block
          width 20px
          height 15px
          margin-right 10px
          vertical-align middle

.homeNav
  background transparent
  box-shadow none
  color $normal-white-color
  >ul
    li
      &.select-list
        .select-router
          margin-top -10px
          //box-shadow: 0 2px 4px 0 rgba(0,0,0,0.22), 0 0 6px 0 rgba(0,0,0,0.3);
          box-shadow  0 0 1px 0 rgba(0,0,0,0.5)
  >ol
    >li
      &.language-li
        width 100px
        p
          text-align center
        ul
          display none
          margin-top -10px
          li
            &:nth-of-type(1)
              border-bottom none
        img
          display inline-block
          width 20px
          height 15px
          margin-right 10px
          vertical-align middle
      &.user-li
        ul
          margin-top -10px
          //box-shadow: 0 2px 4px 0 rgba(0,0,0,0.22), 0 0 6px 0 rgba(0,0,0,0.3);
          box-shadow  0 0 10px rgba(0,0,0,0.5)
      &.new-li
        .new-li-content
          margin-top -10px
          box-shadow  0 0 10px 0 rgba(0,0,0,0.5)

// 其他地方登录弹窗
.other-login
  position absolute
  top 100%
  left 50%
  transform translateX(-50%)
  width 6rem
  height 2rem
  line-height 2rem
  background $normal-black-color
  z-index 999
  border 1px solid $line-dark
  border-radius .1rem
  text-align center
  color $normal-font-color
  p
    font-size .2rem

