@import "../../../common/css/variable.styl"
.headerNav, .tradeNav
  display flex
  align-items center
  li
    a
      display inline-block
      color $index-gray
      padding .06rem .02rem
  .select-router
    position absolute
    display none
    left -.18rem
    width 1rem
    background $normal-white-color
    li
      text-align center
.nav-warp
  position fixed
  top 0
  width 14.4rem
  height .5rem
  z-index 999
  .headerNav
    width 100%
    height 100%
    //margin 0 auto
    background $normal-white-color
    padding 0 1.2rem
    box-shadow 0 1px 4px 0 rgba(151, 168, 178, .3)
    .header-nav-active
      >a
        border-bottom 2px solid $index-blue
        color $index-blue
        padding .06rem .02rem
    //.select-router
    .header-nav-active,.header-nav
      position relative
      margin-right .6rem
      border-bottom 2px solid $normal-white-color
    .select-list:after
      content: ''
      width .07rem
      height .04rem
      background-image $icon-select
      background-size cover
      position absolute
      top: 50%
    .select-list:hover
      .select-router
        display block
    .nav-logo
      margin-right 1.19rem
      a
        display inline-block
        width 1.1rem
        height .32rem
        background-size cover
        background-image $logo-index
  .tradeNav
    width 14.4rem
    height .5rem
    background $exchange-color
    li
      margin-right .3rem
      margin-left .28rem
      a
        color rgba(255, 255, 255, .6)
    .nav-logo
      margin-right .76rem
      a
        display inline-block
        width .88rem
        height .26rem
        background-image $logo-index
        background-size cover