@import "../../../common/css/variable.styl"

.tradeNav, .headerNav, .homeNav
  width 14.4rem
  height .5rem
  padding 0 .28rem
  background $exchange-color
  line-height .5rem
  position fixed
  top 0
  z-index 999
  .hide
    display none
  .login-out
    cursor pointer
  >ul
    float left
    >li
      float left
    li
      height .5rem
      margin-right .4rem
      a
        color $normal-white-color-a
      &.header-nav-active
        >a
          color $normal-white-color
      &:last-child
        margin-right 0
      &.nav-logo
        margin-right 1.2rem
        a
          display block
          width .88rem
          height .5rem
          background $logo-trade no-repeat 0 .12rem / .88rem .26rem
      &.select-list
        position relative
        &:hover
          .select-router
            display block
          &:after
            position absolute
            top: 50%
            right -.1rem
            content: ''
            width .08rem
            height .05rem
            background-image $icon-select
            background-size cover
            transform translateY(-50%) rotate(180deg)

        &:after
          position absolute
          top: 50%
          right -.1rem
          content: ''
          width .08rem
          height .05rem
          background-image $icon-select
          background-size cover
          transform translateY(-50%)

        .select-router
          position absolute
          display none
          left -.18rem
          width 1rem
          background $exchange-color
          border 1px solid $exchange-bg
          li
            width 100%
            height .4rem
            line-height .4rem
            text-align center
            margin-right 0
            &:nth-of-type(1)
              border-bottom 1px solid $exchange-bg
            a
              display block
              width 100%
              height 100%
              padding 0
              &.children-active
                background $main-color
                color $normal-white-color
              &:hover
                color $normal-white-color
                background $exchange-color
  >ol
    float right
    >li
      float left
      color $normal-white-color-a
      &.language-li
        width .8rem
        p
          cursor pointer
          text-align center
        ul
          display none
          background $exchange-color
          li
            cursor pointer
            height .4rem
            padding 0 .05rem
            line-height .4rem
            text-align center
            corsor pointer
            &:nth-of-type(1)
              border-bottom 1px solid $exchange-bg
        img
          display none
        &:hover
          .language-ul
            display block
      &.new-li
        position relative
        .new-li-img
          position relative
          text-align center
          cursor pointer
          img
            position relative
            top -.02rem
            width .2rem
            height .2rem
            vertical-align middle
          i
            position absolute
            right -.06rem
            top .25rem
            display inline-block
            min-width .12rem
            height .12rem
            padding .02rem
            background $negative-color
            color $normal-white-color
            border-radius 50%
            line-height .12rem
            font-size .12rem
            &.hide
              display none
        .new-li-content
          position absolute
          left 50%
          transform translateX(-50%)
          width 3.3rem
          border-radius (.02rem)
          background $exchange-color
          border 1px solid $normal-black-color
          box-shadow 0 2px 4px 0 rgba(0,0,0,0.22), 0 0 6px 0 rgba(0,0,0,0.30)
          &:after
            position absolute
            top -.06rem
            left 50%
            width .1rem
            height .1rem
            margin-left -.05rem
            border-top 1px solid $normal-black-color
            border-right 1px solid $normal-black-color
            background $exchange-color
            transform rotate(-45deg)
            -webkit-transform rotate(-45deg)
            content ''
          p
            height .4rem
            line-height .4rem
            padding 0 .1rem
            color $normal-white-color
            border-bottom 1px solid rgba(170,188,191,0.10)
            span
              float left
            em
              float right
          ul
            max-height 1.5rem
            padding .1rem
            overflow-y auto
            li
              height .3rem
              line-height .3rem
              cursor pointer
          div
            padding .3rem 0
            text-align center
          .check-all
            display block
            height .36rem
            line-height .36rem
            text-align center

          a
            color $normal-white-color
            background  rgba(170,188,191,0.10)
            text-align center

      &.login-li
        margin 0 .3rem 0 .35rem
        a
          color $normal-white-color-a
      &.user-li
        position relative
        margin 0 .3rem 0 .35rem
        p
          text-align center
        ul
          position absolute
          left 50%
          transform translateX(-50%)
          display none
          width 1.2rem
          background $exchange-color
          li
            height .4rem
            padding 0 .05rem
            line-height .4rem
            text-align center
            color $normal-font-color
            &:hover
              color $normal-white-color
              a
                color $normal-white-color
            a
              color $normal-font-color
            //&:nth-of-type(1)
            //  border-bottom 1px solid $exchange-bg
        &:hover
          .login-ul
            display block


.headerNav, .homeNav
  width 100%
  min-width 11.6rem
  height .7rem
  padding 0 1.2rem
  line-height .7rem
  background $main-bg-active
  >ul
    height .7rem
    li
      height .7rem
      margin-right .4rem
      &.header-nav-active
        >a
          border-bottom 2px solid $index-blue
          color $index-blue
          padding .06rem .02rem
      &:last-child
        margin-right 0
      &.nav-logo
        margin-right 1.2rem
        a
          display block
          width 1.1rem
          height .5rem
          margin-top .1rem
          background $logo-index no-repeat 0 0 / 1.1rem .5rem

  >ol
    >li
      &.language-li
        width 1rem
        p
          text-align center
        ul
          display none
          li
            height .4rem
            padding 0 .05rem
            line-height .4rem
        img
          display inline-block
          width .2rem
          height .15rem
          margin-right .1rem
          vertical-align middle

.homeNav
  background transparent
  box-shadow none
  color $normal-white-color
  >ol
    >li
      &.language-li
        width 1rem
        p
          text-align center
        ul
          display none
          background none
          margin-top -.2rem
          li
            color $main-color
            &:nth-of-type(1)
              border-bottom none
        img
          display inline-block
          width .2rem
          height .15rem
          margin-right .1rem
          vertical-align middle


