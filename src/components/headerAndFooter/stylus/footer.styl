@import "../../../common/css/variable.styl"

.footer-wrap
  width 100%
  //min-width 11.6rem
  background $footer-gray
  height 1.98rem
  padding .35rem 0 0
  .home-img
    display block
    width: .82rem
    padding-bottom .21rem
    margin: 0 auto
    img
      width .82rem
      height .24rem
  ul
    text-align: center
    margin-bottom .2rem
    li
      display inline-block
      margin-right .4rem
      a
        color $normal-black-color
  ol
    li
      float left
      margin-right .2rem
      position relative
      img
        width .2rem
        height .2rem
      .wx-img:hover
        +.wx-qrCode
          display block
      .wx-img
        +.wx-qrCode
          display none
          width 1rem
          height 1rem
          background-image $wx-qrCode
          background-color #F8FAFB
          background-position center center
          background-size 1rem 1rem
          background-repeat no-repeat
          position absolute
          bottom .3rem
          right -.4rem
          z-index 999
  .right-content
    p
      margin: 0 auto
      width: 3rem
      text-align: center
    &:before
      position relative
      top: 0.07rem
      display: block
      content: ''
      height: 0
      width: 100%
      border-top: 1px solid #404446

.footer-fixed
  position fixed
  bottom 0