@import "../../../common/css/variable.styl"

.footer-wrap
  width 100%
  //min-width 11.6rem
  background $footer-gray
  height 2.1rem
  padding .35rem 1.2rem 0
  .home-img
    display block
    padding-bottom .24rem
    img
      width .82rem
      height .24rem
  ul
    margin-bottom .2rem
    li
      float left
      margin-right .4rem
      a
        color $normal-black-color
  ol
    li
      float left
      margin-right .2rem
      position relative
      img
        width .2rem
        height .2rem
      .wx-img:hover
        +.wx-qrCode
          display block
      .wx-img
        +.wx-qrCode
          display none
          width 1rem
          height 1rem
          background-image $wx-qrCode
          background-color #F8FAFB
          background-position center center
          background-size 1rem 1rem
          background-repeat no-repeat
          position absolute
          bottom .3rem
          right -.4rem
          z-index 999
  .right-content
    padding-top .24rem
    text-align right
    p:nth-of-type(1)
      padding-bottom .25rem

.footer-fixed
  position fixed
  bottom 0