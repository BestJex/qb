.trade-live-title
	display flex
	height .4rem
	align-items center
	background $trade-bg-title
	justify-content space-around
	width 3.2rem
	.trade-live-title-items
		.trade-live-item
			font-size .12rem
			margin 0 .2rem -.01rem 0
			cursor pointer
			height .4rem
			line-height .4rem
			float left
		.live-item-active
			color $trade-tab-active-font
			border-bottom .02rem solid $trade-tab-active-border
.trade-live-table
	width 3.18rem
	thead
		td
			padding  0
	tbody
		color $trade-font-normal
		.no-content-none
			display none
		tr
			height .21rem
			line-height .21rem
			position relative
			z-index 650
			td:nth-child(1)
				padding-left .16rem
		//.distance
	//	td
	//		padding-bottom .1rem
	//.distance-b
	//	td
	//		padding-top .1rem
	.live-deal
		tr
			height .52rem
			line-height .52rem
			text-align center
			background $trade-live-deal-bg
		.market-up
			color $trade-change-positive
		.market-down
			color $trade-change-negative
	.trade-live-sell
		tr
			td
				height .21rem
				position relative
				z-index 650
				span
					position relative
					z-index 650
					font-size .11rem
				div
					position absolute
					height 100%
					left 0
					background rgba(242,86,86,.06)
					top 0
					z-index 649
				.user-arrow:before
					content ''
					width .06rem
					height .1rem
					background  $trade-sell-arrow no-repeat center center / cover
					position absolute
					top .04rem
	.trade-live-buy
		tr
			td
				height .21rem
				//overflow hidden
				position relative
				z-index 650
				span
					position relative
					z-index 650
					font-size .11rem
				div
					position absolute
					height 100%
					left 0
					background rgba(43,183,137,.06)
					bottom 0
					z-index 649
				.user-arrow:before
					content ''
					width .06rem
					height .1rem
					background  $trade-buy-arrow no-repeat center center / cover
					position absolute
					top .04rem
					