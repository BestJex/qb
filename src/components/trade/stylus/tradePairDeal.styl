@import "../../../common/css/variable.styl"
.trade-pair-deal-title
  display flex
  height .34rem
  align-items center
  justify-content space-between
  margin: 0.17rem 0.05rem 0.1rem 0.16rem;
  img
    width .34rem
    height .34rem
    //margin-right .06rem
  h2
    font-size .28rem
    color $normal-white-color-a9
    //padding 0 .01rem
  span
    a
      color $exchange-blue
      font-size .11rem
.trade-pair-deal-price
  width 100%
  text-align center
  color $normal-white-color-a9
  font-size .16rem
.market-up
  color $exchange-blue
.market-down
  color $exchange-red