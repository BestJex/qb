//@import "../../../common/css/variable.styl"
.trade-plan-deal
	//padding .08rem .64rem .16rem .64rem
	padding-bottom .16rem
	width 100%
	height 100%
	position relative
	.deal-entrust
		width 100%
		height .4rem
		line-height .4rem
		padding 0 .16rem;
		background $trade-bg-title
		//padding .08rem 0
		.select-button .trade
			min-width 90px
		.select-button ul li
			overflow hidden
			white-space pre
		span
			margin-right .6rem
			display inline-block
			height 100%
			margin-bottom -.01rem
			font-size .12rem
			cursor pointer
		.entrust-active
			color $trade-tab-active-font
			border-bottom .02rem solid $trade-tab-active-border
		.pop-parent
			position relative
			height .25rem
			.pop-children
				position absolute
				top calc(50% + .08rem)
				left 100%
				transform translate(0.2rem, -50%)
				min-width 136px
				width 1.6rem
				height auto
				padding .03rem
				font-size .1rem
				line-height .14rem
				text-align justify
				z-index 99
	.trade-deal-exchanged
		width 100%
		display flex
		justify-content space-between
		padding 0 .16rem
	.deal-set-pwd
		position fixed
		top 0
		left 0
		bottom 0
		right 0
		background $trade-deal-shadow
		z-index 6665
		.deal-pwd-detail
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			width 5rem
			padding-bottom .02rem
			border-radius .02rem
			.deal-pwd-title
				height .36rem
				width 100%
				padding 0 .2rem
				line-height .36rem
				color $trade-font-normal
				display flex
				align-items center
				justify-content space-between
				background-color $trade-bg-title
				em
					width .12rem
					height .12rem
					background $exchange-close-button
					background-size: contain
			.deal-pwd-content
				width 100%
				margin 0 auto
				background $trade-main-bg
				display flex
				align-items center
				min-height .7rem
				justify-content space-around
				color $trade-deal-input-color
				.pwd-radio
					-webkit-appearance radio
				.choice label
					font-size .12rem
				.set-pwd-msg
					width 100%
					padding .1rem .2rem
					font-size .12rem
					line-height .22rem
				.set-pwd-input
					width 100%
					height .55rem
					padding  0 .2rem .33rem
					display flex
					align-items center
					justify-content space-between
					span
						color $trade-deal-setPass-color
						font-size .12rem
					.set-pwd
						border-radius .02rem
						border .01rem solid $trade-deal-setPass-border
						background-color $trade-deal-setPass-bg
						padding .02rem .04rem
						color $trade-font-normal
					.set-pwd-sub
						font-size .12rem
						color $trade-font-title
						background $trade-deal-setPass-botton-bg
						border-radius .02rem
						padding 0 .04rem
						height 100%
	.deal-pop
		.deal-pop-location
			top 50%
			left 50%
			transform translate(-50%, -50%)
			z-index 9999
	.deal-login-shadow
		top 0;
		width 8.2rem;
		position absolute;
		height 3.12rem;
		background rgba(30,33,32,0.8);
		z-index 8888;
		text-align center
		line-height 3.12rem
		a
			color $trade-deal-setPass-color
			font-size .28rem
		span
			color $trade-font-title
			font-size .28rem
	.deal-exchange-pop
		position fixed
		top 0
		left 0
		right 0
		bottom 0
		z-index 10000
		background rgba(0,0,0,.5)
		.deal-exchange-pop-detail
			position absolute
			width 3.8rem
			height 1.93rem
			top 50%
			left 50%
			transform translate(-50% ,-50%)
			background: #25292B;
			box-shadow: 0 0 20px 0 rgba(0,0,0,0.30);
			border-radius: 2px;
			.deal-exchange-pop-title
				width 100%
				height .36rem
				line-height .36rem
				padding-left .16rem
				background $dark-font-color
				color $normal-white-color
				font-size .14rem
			.deal-exchange-pop-content
				width 100%
				height 1.57rem
				padding .24rem .16rem
				color $normal-white-color-a9
				p
					font-size .14rem
					margin-bottom .2rem
					span
						margin-left .1rem
						font-size 18px
					em
						font-size 12px
						margin-left 5px
						color $normal-white-color-a
				.deal-exchange-pop-button
					display flex
					justify-content space-between
					button
						border-radius .02rem
						color $normal-white-color
						width 1.42rem
						height .34rem
						line-height .34rem
						text-align center
						background $exchange-blue
						cursor pointer
					.deal-exchange-pop-exit
						background $exchange-red