@import "../../../common/css/variable.styl"

.home-notice-wrap
  position relative
  width 100%
  height .6rem
  padding-top .175rem
  margin-top -.6rem
  background linear-gradient(90deg, rgba(0,0,0,0.00) 0%, rgba(0,0,0,0.80) 50%, rgba(0,0,0,0.00) 100%)
  .hide
    display none
  .home-notice-content
    position relative
    width 100%
    height .25rem
    line-height .25rem
    overflow hidden

    ul
      position absolute
      width 100%
      li
        height .25rem
        cursor pointer
        text-align center
        i
          position relative
          margin-right .2rem
          color $main-color
        span
          color $normal-font-color
