              width 100%
              height 100%
              background $market-active no-repeat
              background-size 100% 100%
              color $exchange-blue
          &:first-child
            padding-left 0
          &:last-child
            padding-right 0
            &:after
              position absolute
              top 0
              right 0
              content ''
              background none
          &:after
            position absolute
            top 50%
            transform translateY(-50%)
            right -.05rem
            content '/'
            color $normal-white-color
            opacity .1
