      .nothing-market-pair
        color $normal-font-color
        text-align center
        border-bottom none
        td
          padding .3rem 0 0
          font-size .2rem
      tr
        height .45rem
        line-height .45rem
      thead
        tr
          color $normal-gray-color
        th:nth-of-type(1)
          padding-left .3rem
        .sort-img-li
          cursor pointer
          img
            width .16rem
            height .16rem
            position relative
            top .03rem
            left .06rem
        th
