@import "../../../common/css/variable.styl"

@keyframes bgscale {
  0% {
    transform: scale(1.05);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(1.05);
  }
}

.home-wrap
  .home-updown
    position relative
    padding-left .15rem
    &.up-i
      color $index-blue
      &:before
        position absolute
        top 50%
        transform translate(0, -50%)
        left 0
        content ''
        width .12rem
        height .12rem
        background $home-up no-repeat center center
        background-size .12rem .12rem
    &.down-i
      color $index-red
      &:before
        position absolute
        top 50%
        transform translate(0, -50%)
        left 0
        content ''
        width .12rem
        height .12rem
        background $home-down no-repeat center center
        background-size .12rem .12rem
  .hide
    display none
  //推荐交易对
  .home-recommend
    width 100%
    //padding .64rem 1.2rem .93rem
    height .6rem
    background $normal-black-color
    box-shadow 0 1px 10px 1px rgba(0,0,0,0.10)
    ul
      display -webkit-flex
      display flex
      justify-content center
      height .6rem
      line-height .6rem
      padding 0 1.2rem
      li
        position relative
        padding 0 .3rem
        //@media screen and (max-width: 1950px)
        //  padding 0 .8rem
        //@media screen and (max-width: 1700px)
        //  padding 0 .55rem
        //@media screen and (max-width: 1550px)
        //  padding 0 .4rem
        //&:first-child
        //padding-left 0
        &:first-child
          padding-left 0
        &:last-child
          padding-right 0
          &:after
            position absolute
            top 0
            right 0
            content ''
            background none
        &:after
          position absolute
          top .19rem
          right 0
          width 1px
          height .22rem
          content ''
          background $line-light
        span
          color $normal-white-color-a
          padding-right .2rem
          font-size .2rem
        b
          color $normal-white-color-a9
          margin-right .15rem
          font-size .12rem

  //市场
  .home-market
    padding-top .75rem
    background $line-dark
    .home-market-con
      padding .5rem .55rem
      box-shadow 0 1px 10px 0 rgba(0,0,0,0.20)
      border-radius 6px
      background $dark-font-color
    .market-nav
      height .36rem
      line-height .36rem
      margin-bottom .48rem
      ul
        float left
        height .36rem
        li
          position relative
          float left
          padding 0 .15rem
          font-size .16rem
          cursor pointer
          span
            padding .08rem .15rem
            color $normal-white-color-a
            &.home-market-item-active
              //color $normal-white-color
              //background $index-blue
              //border-radius .2rem
              //box-shadow: 0 .07rem .3rem rgba(65, 139, 255, .4)
              //margin 0 .14rem
              width 100%
              height 100%
              background $market-active no-repeat
              background-size 100% 100%
              color $exchange-blue
          &:first-child
            padding-left 0
          &:last-child
            padding-right 0
            &:after
              position absolute
              top 0
              right 0
              content ''
              background none
          &:after
            position absolute
            top 0rem
            right -.05rem
            content '/'
            color $normal-gray-color
      .base-input-wrap
        float right
        width 2rem
        height .36rem
        display flex
        justify-content center
        input
          background $bg-dark-color
        button
          width .44rem
          //background-image linear-gradient(-123deg, #5C6265 0%, #2F3335 92%) !important
    table
      width 100%
      tr
        height .45rem
        line-height .45rem
      thead
        tr
          color $normal-gray-color
        th:nth-of-type(1)
          padding-left .3rem
        .sort-img-li
          cursor pointer
          img
            width .16rem
            height .16rem
            position relative
            top .03rem
            left .03rem
      tbody
        tr
          border-bottom 1px solid $normal-white-color-a
          &:last-child
            border-bottom none
        td:first-child
          padding-left .3rem
        td
          color $normal-white-color-a
          span
            color $normal-white-color-a
          .second-span
            color $normal-white-color-a9
            font-size .12rem
          a
            color $normal-white-color-a
          .market-up
            color $index-blue
          .market-down
            color $index-red
        img
          position relative
          top .03rem
          width .16rem
          height .16rem
          cursor pointer

