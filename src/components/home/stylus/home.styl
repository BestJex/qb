  //市场
  .home-market
    width 12rem
    padding-top .75rem
    margin 0 auto
    background $line-dark
    .home-market-con
      padding .5rem .55rem .98rem
      box-shadow 0 1px 10px 0 rgba(0,0,0,0.20)
      border-radius 6px
      background $dark-font-color
    .market-nav
      height .36rem
      line-height .36rem
      margin-bottom .48rem
      ul
        float left
        li
          position relative
          float left
          padding 0 .15rem
          font-size .16rem
          cursor pointer
          span
            display inline-block
            padding .04rem .28rem
            color $normal-white-color-a9
            &.home-market-item-active
              //color $normal-white-color
              //background $index-blue
              //border-radius .2rem
              //box-shadow: 0 .07rem .3rem rgba(65, 139, 255, .4)
              //margin 0 .14rem
