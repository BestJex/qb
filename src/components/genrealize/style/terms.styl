@import "../../../common/css/variable.styl"
@import "../../../common/css/base.styl"
.terms{
  text-align: left;
  padding: 0.12*3.84rem;
  text-indent: 2em;
  word-break: break-all
}
.terms .intro{
  font-size: 0.16*3.84rem;
  color: $normal-black-color;
  text-align: justify;
  line-height: 0.24*3.84rem;
}
.terms .intro ul li{
  font-size: 0.16*3.84rem;
}
.terms .item{
  margin-top: 0.1*3.84rem;
}
.terms .item dt{
  font-size: 0.16*3.84rem;
  margin-bottom: 0.05*3.84rem;
  text-indent: 0;
  color: $main-color;
  letter-spacing: 0;
}
.terms .item dd{
  font-size: 0.14*3.84rem;
  color: $normal-black-color;
  letter-spacing: 0;
  text-align: justify;
  line-height: 0.21*3.84rem;
}
.terms .item dd li{
  font-size: 0.14*3.84rem;
  text-indent: 4em;
}