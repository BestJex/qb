@import "../../common/css/variable.styl"

.view-popup-wrap
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(0, 0, 0, .7)
  z-index 5
  .view-info
    position absolute
    left 50%
    top 50%
    width 5.64rem
    height 2.56rem
    padding .24rem .3rem .44rem
    background $normal-white-color
    border-radius (.06rem)
    transform translateX(-50%) translateY(-50%)
    .close-popup
      width .16rem
      height .16rem
      margin-left 4.9rem
      cursor pointer
    h1
      margin .04rem 0 .44rem
    div
      //width 5.04rem
      margin-bottom .24rem
      .base-input-wrap
        float left
        input
          width 3.74rem
          height .4rem
          padding-left .1rem
          //background $main-bg-active
          //border 1px solid $line-light
          border-right none
          border-radius (.02rem)
          vertical-align bottom
      .verify-btn
        float left
        width 1.3rem
        height .4rem
        background $main-color
        margin-left -.02rem
        border-radius (0 .02rem .02rem 0)
        border none
        color #FFF
    .set-btn
      width 1rem
      height .4rem
      background $main-color
      margin-left 4rem
      border none
      color #FFF
