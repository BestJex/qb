@import "./variable.styl"

.active-fresh-wrap
  width 12rem
  margin .51rem auto 0
  padding-bottom .74rem
  .hide
    display none
  .banner-img
    position relative
    width 10rem
    height 3.8rem
    // background url("/static/img/img_bg.jpg") no-repeat
    background-size 100% 100%
    margin-bottom .44rem
    img
      position absolute
      top 50%
      left 50%
      transform translateX(-50%) translateY(-50%)
      width 9rem
      height 1.3rem

  h1
    font-size .28rem
    color $activity-font-normal
    line-height .28rem
    margin-bottom .44rem
    span
      font-size .28rem
    b
      font-size .36rem
    a
      font-size .28rem
      line-height .28rem
      color $activity-font-main
      margin-left .1rem
      &:hover
        text-decoration underline
  .active-clip
    display flex
    justify-content flex-start
    align-items center
    .active-clip-input-active
      width 7rem
      height .5rem
      border .01rem solid $activity-font-main
      background $activity-bg-disable
      color $activity-font-title
      padding .18rem 0 .18rem .1rem
    //.active-clip-input-hidden
    //  width .01px
    //  //visibility hidden
    //  position absolute
    //  height .01px
    button
      width 2rem
      height .5rem
      border-radius 0 2px 2px 0
      background $activity-font-main
      color $activity-font-button
  dl
    margin .5rem 0
    color $activity-font-normal
    dt
      font-size .2rem
      letter-spacing 1.43px;
      text-align justify;
      margin-bottom .2rem
    dd
      margin-bottom .15rem
      &:nth-of-type(1)
        a
          color $activity-font-main
          &:hover
            text-decoration underline
      &:nth-of-type(2)
        span
          color $activity-font-negative
  ul
    margin-bottom .44rem
    li
      margin-bottom .15rem
  .record-list
    margin-top .3rem
    p
      font-size .2rem
      color $activity-font-normal
      margin-bottom .3rem
    table
      width 5rem
      td
        padding-bottom .18rem
        &:nth-of-type(odd)
          text-align left
        &:nth-of-type(even)
          text-align right
      thead
        color $activity-font-title
      tbody
        color $activity-font-normal
        .record-list-no-data
          padding .5rem 0
          text-align center
