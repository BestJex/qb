@import "../../../common/css/variable.styl"
 // 通知列表
.user-notice-wrap
  width 12rem
  margin 0 auto
  .hide
    display none
  h1
    margin .3rem 0 .45rem
    font-size .2rem
    color $normal-font-color
  .table-div
    width 100%
    color $normal-font-color
    .table-title
      border-bottom .01rem solid $line-light
      padding-bottom .2rem
      span
        display inline-block
        width 10rem
        text-align center
        font-size .18rem
      i
        display inline-block
        width 2rem
        text-align center
        font-size .18rem
    ul
      margin-bottom .7rem
      min-height 410px
      li
        cursor pointer
        border-bottom .01rem solid $line-light
        height .5rem
        line-height .5rem
        padding 0 .3rem
        &:last-child
          border-bottom none
        p
          float left
          width 9rem
          overflow hidden
          white-space nowrap
          text-overflow ellipsis
          .read-flag
            display inline-block
            width .1rem
            height .1rem
            background $main-color
            border-radius 50%
            margin-right .1rem
            &.no-read
              display none
        i
          float right
          display inline-block
          width 2rem
          text-align right


