// 内容详情弹窗
.user-notice-pop-wrap
  position absolute
  top .5rem
  left 50%
  transform translateX(-50%)
  width 6rem
  background $normal-black-color
  z-index 999
  border 1px solid $line-dark
  .user-notice-pop-title
    height .6rem
    padding 0 .3rem
    line-height .6rem
    margin 0 0 .3rem
    border-bottom  1px solid $line-dark
    span
      float left
      font-size .2rem
      color $normal-font-color
    img
      float right
      width .2rem
      height .2rem
      margin-top .2rem
      cursor pointer
  p
    min-height .5rem
    padding 0 .2rem .2rem
    font-size .16rem
    color $normal-font-color
    line-height .25rem






