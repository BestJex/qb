@import "../../../common/css/variable.styl"
 // 通知列表
.user-notice-wrap
  width 12rem
  margin 0 auto
  .hide
    display none
  h1
    margin .3rem 0 .45rem
    color $normal-black-color
    font-size .2rem
  table
    width 100%
    margin-bottom .44rem
    thead
      th
        padding .16rem 0
        border-bottom .01rem solid $line-light
        color $normal-gray-color
    tbody
      padding .16rem 0
      tr
        height .5rem
        line-height .5rem
        text-align center
        border-bottom .01rem solid $line-light
        &:last-of-type
          border-bottom none
      td
        cursor pointer
        .read-flag
          display inline-block
          width .1rem
          height .1rem
          background $main-color
          border-radius 50%
          margin-right .1rem

          &.no-read
            display none


// 内容详情弹窗
.user-notice-pop-wrap
  position absolute
  top .5rem
  left 50%
  transform translateX(-50%)
  width 6rem
  background $normal-white-color
  z-index 999
  border 1px solid $line-dark
  .user-notice-pop-title
    height .6rem
    padding 0 .3rem
    line-height .6rem
    margin 0 0 .3rem
    border-bottom  1px solid $line-dark
    span
      float left
      font-size .2rem
    img
      float right
      width .2rem
      height .2rem
      margin-top .2rem
      cursor pointer
  p
    min-height .5rem
    padding 0 .2rem
    font-size .16rem






