.information-wrap
  ul
    li
      width 2.9rem
      height 4rem
      box-shadow 0 .02rem .04rem 0 rgba(151,168,178,0.30)


.banner-wrap
  position relative
  width 10rem
  height 1rem
  overflow hidden
  ul
    position absolute
    left -10rem
    width 60rem
    height 1rem
    li
      float left
      width 10rem
      height 1rem
      &:nth-child(1)
        background #a953ae
      &:nth-child(2)
        background #fae0de
      &:nth-child(3)
        background #f0cc00
      &:nth-child(4)
        background #e2fde1
      &:nth-child(5)
        background #a953ae
      &:nth-child(6)
        background #fae0de