@import "../../../common/css/variable.styl"

.trade-notice-wrap
  h3
    width 100%
    height .4rem
    line-height .4rem
    background $normal-black-color
    padding-left .17rem
    color $normal-white-color
    margin-bottom .2rem
    font-size .12rem
  ul
    padding 0 .1rem
    li
      height .5rem
      margin-bottom .15rem
      p
        margin-bottom .1rem
        a
          font-size .12rem
          text-decoration underline
          color $normal-white-color-a9
      span
        display block
        text-align right
        font-size .12rem
        color $normal-white-color-a