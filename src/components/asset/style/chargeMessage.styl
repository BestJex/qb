@import "../../../common/css/variable.styl"
@import "../../../common/css/base.styl"
.asset-message
  overflow hidden
  position absolute
  left 0
  top 0
  width 100%
  height 0.44rem
  padding-left 2.66rem
  line-height 0.44rem
  background-color $line-dark-a
  ul
    position absolute
    float left
    width 10rem
    left 3.5rem
    li
      float left
      width 50%
      height 0.44rem
      font-size 0.13rem
      color $normal-font-color
      letter-spacing 0
      a
        color $normal-font-color
      a:hover
        color $negative-color
        text-decoration underline
        cursor pointer
  .asset-message-title
    float left
    padding-left 0.24rem
    margin-right 0.1rem
    background $asset-charge-new no-repeat 0 0.12rem
    background-size 0.2rem 0.2rem