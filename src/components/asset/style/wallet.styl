@import "../../../common/css/variable.styl"
@import "../../../common/css/base.styl"
.asset
  .balance
    .asset-wallet
      p
        margin 0 0 0.2rem 0.3rem
        input
          width 3.8rem
          height 0.3rem
          margin-right 3.2rem
          padding-left 0.2rem
          background #F7F9FB
          border 0.01rem solid #E0E6EA
          border-radius(0.02rem)
        span
          position relative
          display inline-block
          width 1.16rem
          height 0.3rem
          padding-left 0.22rem
          margin-right 0.2rem
          font-size 0.12rem
          color $normal-gray-color
          line-height 0.3rem
          border-radius(0.02rem)
          border 0.01rem solid $normal-gray-color
          cursor pointer
          &:hover
            color $main-color
            border 0.01rem solid $main-color
            i
              border none
              background-color $main-color
          i
            position absolute
            width 0.1rem
            height 0.1rem
            left 0.06rem
            top 0.1rem
            letter-spacing 0.05px
            border 0.02rem solid $normal-gray-color
            border-radius(50%)
          b
            display inline-block
            position relative
            top 0.02rem
            left 0.02rem
            width 0.14rem
            height 0.14rem
            background-color $normal-gray-color
            border-radius(50%)
      table
        width 10.12rem
        thead
          background $bg-light-color
          th
            width 1.35rem
            height 0.3rem
            font-size 0.12rem
            color $normal-gray-color
            letter-spacing 0.0005rem
            text-align justify
            line-height 0.3rem
            cursor pointer
            &.currency
              padding-left 0.4rem
            &.handle
              width 2.6rem
              text-align center
            img
              position relative
              top 0.025rem
              width 0.15rem
              height 0.15rem
        tbody
          tr
            position relative
            border-bottom 0.01rem solid $line-light
            &:hover
             background-color $bg-dark-color
          td
            height 0.7rem
            line-height 0.7rem
            font-size 0.14rem
            color $normal-black-color
            letter-spacing 0.0006rem
            text-align justify
            // border-bottom 0.01rem solid $line-light
            &.currency
              padding-left 0.4rem
              span
                width 0.16rem
                height 0.16rem
                background $bg-light-color
            &.handle
              padding-left 0.2rem
              button
                width 0.66rem
                height 0.3rem
                margin-right 0.20rem
                background-color $bg-light-color
                color $main-color
                &:hover
                  background-color $main-color
                  color $normal-white-color
                &:active
                  background-color $main-color-active
                  color $normal-white-color