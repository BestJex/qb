@import '../../../common/stylus/base.styl'
.asset
  padding 0.2rem 0 0 1.2rem
  width 14.4rem
  ul
    width 1.86rem
    li
      box-sizing()
      width 1.58rem
      height 0.6rem
      line-height 0.6rem
      font-size 0.16rem
      text-align left
      &:hover a, a.active
        background #F4F8FF
        padding-left 0.24rem
        color #0080D0
        border-left 0.04rem solid #0080D0
      a
        padding-left 0.28rem
        display block
        width 100%
        height 100%
        color #25272D