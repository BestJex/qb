@import "../../../common/css/variable.styl"

.identify-wrap
  .hide
    display none
  .auth-res
    color $normal-font-color
  span
    color $normal-font-color
  .number-err
    position absolute
    color $negative-color
    margin-top .05rem
  input
    width 2.06rem
    height .4rem
    padding-left .1rem
    //background $main-bg-active
    //border 1px solid $line-light
    border-radius (.02rem)
    vertical-align bottom
  .identify-result
    padding .16rem 0 .32rem 1.5rem
    border-bottom 1px solid $bg-dark-color
    img
      width .44rem
      height .44rem
      margin-right .1rem
      vertical-align middle
  .name-identify
    padding .47rem 0 .44rem
    border-bottom 1px solid $bg-dark-color
    span
      display block
      width 8rem
      margin-bottom .44rem
      fz11()
      color $exchange-red
    ul
      float left
      margin 0 .44rem .44rem 0
      color $normal-font-color
      li:first-child
        margin-bottom .18rem
    dl
      color $normal-font-color
      dt
        margin-bottom .32rem
      dd
        float left
        width 1.05rem
        margin-bottom .18rem
        cursor pointer
        img
          width 0.14rem
          height 0.14rem
          margin-right .1rem
          vertical-align top

    .id-input
      width 4.56rem

  .photo-identify
    padding .44rem 0 .58rem
    div
      width 8rem
    .identify-btn
      width 2.5rem
      height .4rem
      background $main-color
      color $normal-white-color
      border-radius (.02rem)
      opacity .5
      &.identify-btn-active
        opacity 1
    input
      width .12rem
      height .12rem
      margin-right .08rem
      vertical-align top
    h3
      margin-bottom .24rem
      fz11()
      color $normal-gray-color
      p
        display inline-block
        position relative
        top .02rem
        margin-right .1rem
        cursor pointer
        span
          display inline-block
          width .14rem
          height .14rem
          border 1px solid $main-color
          border-radius .03rem
        img
          width .15rem
          height .15rem
    dl
      color $normal-font-color
      margin-bottom .44rem
      dt
        margin-bottom .32rem
    dl:nth-of-type(1)
      dd
        margin-bottom .18rem

    dl:nth-of-type(2)
      dd
        float left
        width 1.05rem
        margin-bottom .18rem
        cursor pointer
        img
          width 0.14rem
          height 0.14rem
          margin-right .1rem
          vertical-align top

    dl:nth-of-type(3)
      dd
        float left
        position relative
        width 1.9rem
        height 1.3rem
        text-align center
        cursor pointer
        &:nth-of-type(2)
          margin 0 .2rem 0 .2rem
        img
          width 1.9rem
          height 1.3rem
          vertical-align middle
        .add-img
          position absolute
          top 50%
          left 50%
          transform translateX(-50%) translateY(-50%)
          width .44rem
          height .44rem
          z-index 2
        .up-img
          position absolute
          top 0
          left 0
          z-index 1
        p
          position absolute
          top 1.4rem
          left 0
          width 100%
          text-align center




