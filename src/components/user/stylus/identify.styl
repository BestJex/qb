@import "../../../common/css/variable.styl"

.identify-wrap
  input
    width 2.06rem
    height .4rem
    padding-left .1rem
    background $main-bg-active
    border 1px solid $line-light
    border-radius (.02rem)
    vertical-align bottom
  .identify-result
    padding .16rem 0 .32rem
    border-bottom 1px solid $line-light
  .name-identify
    padding .47rem 0 .44rem
    border-bottom 1px solid $line-light
    span
      display block
      margin-bottom .44rem
      fz11()
      color $negative-color
    ul
      float left
      margin 0 .44rem .44rem 0
      li:first-child
        margin-bottom .18rem
    b
      display block
      margin-bottom .32rem
    p
      margin-bottom .18rem
      i
        margin-right .44rem
    .id-input
      width 4.56rem

  .photo-identify
    padding .44rem 0 .58rem
    .identify-btn
      width 2.5rem
      height .4rem
      background $main-color
      color $normal-white-color
      border-radius (.02rem)
    input
      width .12rem
      height .12rem
      margin-right .08rem
    h3
      margin-bottom .24rem
      fz11()
      color $normal-gray-color
    dl
      margin-bottom .44rem
      dt
        margin-bottom .32rem
    dl:nth-of-type(1)
      dd
        margin-bottom .18rem

    dl:nth-of-type(2)
      dd
        float left
        &:nth-of-type(1)
          margin-right .44rem

    dl:nth-of-type(3)
      dd
        float left
        text-align center
        img
          width 1.9rem
          height 1.3rem
          margin-bottom .1rem
        &:nth-of-type(2)
          margin 0 .2rem 0 .2rem

