@import "./variable.styl"
.find-pass-wrap-con
  position relative
  width 100%
  background $login-bg-main
.find-pass-wrap
  position relative
  transform translateX(-50%)
  left 50%
  width 5rem
  padding .8rem 0
  h1
    width 100%
    text-align center
    font-size .24rem
    margin-bottom .3rem
    color $login-font-normal
  ul
    width 100%
    li
      position relative
      margin-bottom .3rem
      em
        position absolute
        left 0
        margin-top .07rem
        font-size .12rem
        color $login-font-negative
      p
        color $login-font-normal
        margin-bottom .1rem
      input
        width 100%
        height .4rem
      .pass-btn
        width 100%
        height .4rem
        background $login-bg-active
        color $login-font-button
        opacity .5
      .can-click
        opacity 1
    .send-verify-li, .send-picture-li
      .base-input-wrap
        float left
        input
          width 4rem
          border-right none
          vertical-align top
          border-radius (.02rem 0 0 .02rem)
      .send-code-btn, b
        float left
        width 1rem
        height .4rem
        background $login-bg-active
        border none
        border-radius (0 .02rem .02rem 0)
        color $login-font-button
      //span
      //  position absolute
      //  display inline-block
      //  margin-top .1rem
      //  font-size .12rem
      //  color $col5656
    .send-picture-li
      img
        float left
        width 1rem
        height.4rem
        background $login-bg-code
        cursor pointer
