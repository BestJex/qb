@import "../../common/css/variable.styl"

.find-pass-wrap
  width 3.8rem
  margin 0 auto
  h1
    width 100%
    text-align center
    font-size .24rem
    margin-bottom .3rem
  ul
    width 100%
    li
      margin-bottom .25rem
      p
        color $dark-font-color
        margin-bottom .05rem
      input
        width 100%
        height .35rem
      .pass-btn
        width 100%
        height .35rem
        background $main-color
        color $normal-white-color
    .send-verify-li, .send-picture-li
      .base-input-wrap
        float left
        input
          width 2.8rem
          border-right none
          vertical-align top
          border-radius (.02rem 0 0 .02rem)
      .send-code-btn, b
        float left
        width 1rem
        height .35rem
        background $main-color
        border none
        border-radius (0 .02rem .02rem 0)
        color $normal-white-color
    .pass-li
      .base-input-wrap
        margin-bottom .1rem
      span
        font-size .12rem
        color $negative-color-active
    .send-picture-li
      b
        display block
        background $line-light
