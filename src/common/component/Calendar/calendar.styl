@import "../../css/variable.styl"

.calendar-wrap
  position relative
  .input-wrap
    &.active
      input
       border .01rem solid $main-color
      &:before
        position absolute
        top .04rem
        right .02rem
        width .2rem
        height .2rem
        content ''
        background url(/static/img/calendar/calendar_lan.svg) no-repeat
        background-size .2rem .2rem
    &:before
      position absolute
      top .04rem
      right .02rem
      width .2rem
      height .2rem
      content ''
      background url(/static/img/calendar/calendar_normal.svg) no-repeat
      background-size .2rem .2rem
    input
      box-sizing()
      width 1.06rem
      height .3rem
      padding-left .05rem
      margin-bottom .05rem
      font-size .14rem
      line-height .36rem
      background #FFF
      border .01rem solid $line-dark
      border-radius (.04rem)
      &::-webkit-input-placeholder
        font-size .14rem
      &::-moz-placeholder
        font-size .14rem

.calendar
  position absolute
  z-index 22
  box-sizing()
  width 2.58rem
  padding .16rem .26rem .18rem
  background $normal-white-color
  border .01rem solid $disale-border-color
  box-shadow 0 .02rem .04rem 0 rgba(0, 0, 0, 0.12), 0 0 .06rem 0 rgba(0, 0, 0, 0.04)
  border-radius (.02rem)
  text-align center
  font-size .14rem
  h3
    margin 0 auto .16rem
    font-size .14rem
    font-weight normal
    color $normal-black-color
    img
      position relative
      top 0
      cursor pointer
      &.pre-year-img, &.next-year-img
        width .12rem
        height .12rem
      &.pre-month-img, &.next-month-img
        width .12rem
        height .12rem
      &.pre-month-img
        margin-left .2rem
        margin-right .12rem
      &.next-month-img
        margin-left .12rem
        margin-right .2rem
    i
      cursor pointer
      &.year-i
        margin-right .05rem
  table
    width 100%
    font-size 0.12rem
    thead
      color $normal-black-color
    tbody
      td
        width .32rem
        height .28rem
        padding
        &.is-disabled, &.today-disabled
          color $line-light
          pointer-events none
          cursor not-allowed
        &.today-text
          color $main-color
        &.active-text:hover
          cursor pointer
          background $line-light
        &.active-set:hover
          cursor pointer
          color $main-color
        &.active
          color $normal-white-color
          background $main-color
          &:hover
            color $normal-white-color
            background  $main-color

  .calendar-content
    font-size .12rem
