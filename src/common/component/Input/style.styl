@import "../../css/variable.styl"
@import "../../css/base.styl"
.base-input-wrap
  position relative
  height 100%
  &.default
    border none
  &.select
    &::after
      position absolute
      top 0
      right 0
      content ''
      width 10.9%
      height 100%
      background $icon-xiala no-repeat center center
      background-size auto 12%
    .search-list
      position relative
      width 100%
      box-shadow 6px 0 6px 0 rgba(0,0,0,0.06), 0 6px 6px 0 rgba(0,0,0,0.06)
      z-index 99
      li
        width 100%
        height 0.43rem
        padding 0 0.1rem
        background-color $normal-input-color
        &:hover
          background-color $main-bg-active
  &.search2
    &::after
      position absolute
      top 0
      right 0
      content ''
      width 13%
      height 100%
      background $search-default no-repeat center center
      background-size auto 44%
    &:hover::after, &.focus::after
      background-image $search-click
      background-size auto 44%
    &:hover
      input
        border-color $main-color-hover
    input
      padding-right 13%
      border 0.01rem solid $line-dark
      background $normal-input-color
      color $normal-font-color
      border-radius(0.02rem)
  &.search1
    input
      width 84.21%
      height 100%
      border-right 0
      background $normal-input-color
      color $normal-font-color
      border-radius(0.02rem 0 0 0.02rem)
      // &:focus
      //   background $normal-white-color
  input, textarea
    padding-left 0.1rem
    padding-right 0.1rem
    font-size 0.14rem
    background $normal-input-color
    color $normal-font-color
    border 0.01rem solid $line-dark
    letter-spacing 0
    border-radius(0.02rem)
    placeholder($normal-gray-color, 0.14rem)
    &:hover, &:focus
      border-color $main-color
    &.disabled
      background $disale-bg-color
      border 0.01rem solid $disale-border-color
      border-radius(0.02rem)
      placeholder($line-dark, 0.14rem)
    &.dark, &.dark:hover, &.dark:focus
      color $normal-white-color-a
      background transparent
      border 0.01rem solid $line-dark-a
  textarea
    padding-top 0.1rem
    padding-bottom 0.1rem
    resize none
  button
    position absolute
    right 0
    top 0
    width 15.79%
    height 100%
    cursor pointer
    border-radius(0 0.02rem 0.02rem 0)
    background $search-bai no-repeat center center $main-color
    background-size 0.2rem 0.2rem
    &:hover
      background-color $main-color-hover
    &:active
      background-color $main-color-active
