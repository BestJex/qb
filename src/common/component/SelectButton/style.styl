@import '../../base.styl'

.select-button
  position relative
  display inline-block
  button
    display block
    position relative
    min-width 106px
    min-height 36px
    font-size 16px
    color #25272D
    letter-spacing 0.06px
    text-align justify
    opacity 0.6
    cursor pointer
    &::after
      position absolute
      content ''
      bottom 10px
      right 23px
      width 9px
      height 9px
      opacity 0.6
      border 2px solid #25272D
      border-bottom none
      border-right none
      _rotate(45deg)
    &.hide::after
      position absolute
      content ''
      bottom 15px
      right 23px
      width 9px
      height 9px
      opacity 0.6
      border 2px solid #25272D
      border-bottom none
      border-right none
      _rotate(-135deg)
  .main
    box-sizing()
    position relative
    min-width 106px
    min-height 36px
    padding-left 16px
    margin-bottom 5px
    font-size 14px
    color #FFFFFF
    letter-spacing 0
    text-align left
    line-height 36px
    background: #20A0FF
    border-radius 4px
    cursor pointer
    &::after
      position absolute
      content ''
      bottom 15px
      right 16px
      border-bottom 5px solid #FFF
      border-left 5.5px solid transparent
      border-right 5.5px solid transparent
      border-top none
      height 6px
      opacity 0.7
    &.hide::after
      position absolute
      content ''
      bottom 10px
      right 16px
      border-top 5px solid #FFF
      border-bottom none
      border-left 5.5px solid transparent
      border-right 5.5px solid transparent
      height 6px
      opacity 0.7
  ul
    position absolute
    width 100%
    background #FFF
    border 1px solid #D9E3EE
    box-shadow 0 1px 4px 0 rgba(151,168,178,0.30)
    border-radius 2px
    &.hide
      display none
    li
      box-sizing()
      width 100%
      height 36px
      padding 0 10px 0 10px
      font-size 14px
      color #475669
      letter-spacing 0
      line-height 14px
      line-height 36px
      cursor pointer
      &:hover
        background #E5E9F2
    