@import "../../css/variable.styl"
@import "../../css/base.styl"
.select-button
  position relative
  display inline-block
  .default
    display block
    width 1.2rem
    height 0.4rem
    position relative
    font-size 0.16rem
    color $normal-black-color
    background $normal-white-color
    border none
    letter-spacing 0.0006rem
    text-align justify
    opacity 0.6
    cursor pointer
    &::after
      position absolute
      content ''
      bottom 0.1rem
      right 0.23rem
      width .09rem
      height .09rem
      opacity 0.6
      border .002rem solid $normal-black-color
      border-bottom none
      border-right none
      _rotate(45deg)
    &.hide::after
      position absolute
      content ''
      bottom .15rem
      right .23rem
      width .09rem
      height .09rem
      opacity 0.6
      border .002rem solid $normal-black-color
      border-bottom none
      border-right none
      _rotate(-135deg)
  .main
    box-sizing()
    position relative
    padding-left .16rem
    font-size .14rem
    color $normal-black-color
    letter-spacing 0
    text-align left
    line-height .36rem
    background $bg-dark-color
    border-radius (.02rem)
    cursor pointer
    &:hover
      background $main-color
      color $normal-white-color
    &::after
      position absolute
      content ''
      bottom .12rem
      right .1rem
      border-bottom .06rem solid $normal-gray-color
      border-left .055rem solid transparent
      border-right .055rem solid transparent
      border-top none
      height .06rem
      opacity 0.7
    &.hidden::after
      position absolute
      content ''
      bottom .05rem
      right .1rem
      border-top .06rem solid $normal-gray-color
      border-bottom none
      border-left .055rem solid transparent
      border-right .055rem solid transparent
      height .06rem
      opacity 0.7
    &.simple::after
      right 50%
      margin-right -0.055rem
  .trade
    position relative
    width 0.57rem
    height 0.16rem
    min-width 63px
    min-height 16px
    line-height 0.16rem
    border-radius(0.02rem 0 0 0)
    border 0.01rem solid $exchange-blue
    cursor pointer
    &.hidden
      border-radius(0.02rem 0 0 0.02rem)
    &:hover
      background-color $exchange-opacity-blue
    p
      fz10()
      color $normal-white-color
      text-align center
      -webkit-transform-origin center center
    i
      position absolute
      top -0.01rem
      right -0.1rem
      width 0.1rem
      height 0.16rem
      min-height 16px
      border-radius(0 0.02rem 0.02rem 0)
      background-color $exchange-blue
      &::before
        position absolute
        right 0
        top 0
        content ''
        width 100%
        height 50%
        background url('/static/images/up_icon_trade.png') no-repeat center 90%
        background-size 45% auto
      &::after
        position absolute
        right 0
        bottom 0
        content ''
        width 100%
        height 50%
        background url('/static/images/down_icon_trade.png') no-repeat center 10%
        background-size 45% auto
  .base-list
    position absolute
    width 100%
    background $normal-white-color
    border 0.01rem solid $line-light
    border-radius(0.02rem)
    &.hide
      display none
    li
      width 100%
      height 0.4rem
      padding 0 .1rem 0 .1rem
      font-size .14rem
      text-align center
      color $normal-black-color
      border-bottom 0.01rem solid $line-light
      letter-spacing 0
      line-height .4rem
      cursor pointer
      &:hover
        background $bg-dark-color
      &.active
        color $normal-white-color
        background $main-color
  .trade-list
    position absolute
    width 100%
    border 0.01rem solid $exchange-blue
    border-top 0
    background-color $exchange-opacity-blue
    &.hide
      display none
    li
      width 100%
      line-height 0.15rem
      cursor pointer
      text-align center
      &:hover
        background-color $exchange-blue
      p
        fz10()
        color $normal-white-color
        -webkit-transform-origin center center
