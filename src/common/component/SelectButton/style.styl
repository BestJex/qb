@import "../../css/variable.styl"
@import "../../css/base.styl"
.select-button
  position relative
  display inline-block
  .default
    display block
    width 1.2rem
    height 0.4rem
    position relative
    font-size 0.16rem
    color $normal-black-color
    background $normal-white-color
    border none
    letter-spacing 0.0006rem
    text-align justify
    opacity 0.6
    cursor pointer
    &::after
      position absolute
      content ''
      bottom 0.1rem
      right 0.23rem
      width .09rem
      height .09rem
      opacity 0.6
      border .002rem solid $normal-black-color
      border-bottom none
      border-right none
      _rotate(45deg)
    &.hide::after
      position absolute
      content ''
      bottom .15rem
      right .23rem
      width .09rem
      height .09rem
      opacity 0.6
      border .002rem solid $normal-black-color
      border-bottom none
      border-right none
      _rotate(-135deg)
  .main
    box-sizing()
    position relative
    padding-left .16rem
    font-size .14rem
    color $normal-black-color
    letter-spacing 0
    text-align left
    line-height .36rem
    background $bg-dark-color
    border-radius (.02rem)
    cursor pointer
    &:hover
      background $main-color
      color $normal-white-color
    &::after
      position absolute
      content ''
      bottom .12rem
      right .1rem
      border-bottom .06rem solid $normal-gray-color
      border-left .055rem solid transparent
      border-right .055rem solid transparent
      border-top none
      height .06rem
      opacity 0.7
    &.hide::after
      position absolute
      content ''
      bottom .05rem
      right .1rem
      border-top .06rem solid $normal-gray-color
      border-bottom none
      border-left .055rem solid transparent
      border-right .055rem solid transparent
      height .06rem
      opacity 0.7
    &.simple::after
      right 50%
      margin-right -0.055rem
  ul
    position absolute
    width 100%
    background $normal-white-color
    border 0.01rem solid $line-light
    border-radius(0.02rem)
    &.hide
      display none
    li
      width 100%
      height 0.4rem
      padding 0 .1rem 0 .1rem
      font-size .14rem
      text-align center
      color $normal-black-color
      letter-spacing 0
      line-height .4rem
      cursor pointer
      &:hover
        background $bg-dark-color
      &.active
        color $normal-white-color
        background $main-color
    